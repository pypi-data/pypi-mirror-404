# Include important metadata files
include LICENSE
include README.md
include CHANGELOG.md
include pyproject.toml

# Include documentation
recursive-include docs *.md

# Include type hints marker
include vibedna/py.typed

# Include all Python source files
recursive-include vibedna *.py

# Include tests
recursive-include tests *.py

# Exclude compiled files
global-exclude *.pyc
global-exclude *.pyo
global-exclude __pycache__
global-exclude *.so
global-exclude .DS_Store
global-exclude *.egg-info

# Exclude development and CI files
exclude .gitignore
exclude .pre-commit-config.yaml
exclude Dockerfile
exclude docker-compose.yml
exclude vercel.json
exclude index.html
exclude styles.css
exclude script.js
prune .git
prune .github
prune .vscode
prune images
