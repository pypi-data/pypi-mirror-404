{
  "name": "RP2040",
  "description": "Configuration for RP2040 MCU (Raspberry Pi Pico) extracted from arduino-pico",
  "mcu": "rp2040",
  "architecture": "arm-cortex-m0plus",

  "compiler_flags": {
    "common": [
      "-march=armv6-m",
      "-mcpu=cortex-m0plus",
      "-mthumb",
      "-Os",
      "-ffunction-sections",
      "-fdata-sections",
      "-fno-exceptions",
      "-Wno-error=unused-function",
      "-Wno-error=unused-variable",
      "-Wno-error=deprecated-declarations",
      "-Wno-unused-parameter",
      "-Wno-sign-compare",
      "-g",
      "-MMD"
    ],
    "c": [
      "-std=gnu17"
    ],
    "cxx": [
      "-std=gnu++17",
      "-fno-rtti",
      "-fno-exceptions",
      "-fno-threadsafe-statics"
    ]
  },

  "linker_flags": [
    "-march=armv6-m",
    "-mcpu=cortex-m0plus",
    "-mthumb",
    "-Wl,--cref",
    "-Wl,--check-sections",
    "-Wl,--gc-sections",
    "-Wl,--unresolved-symbols=report-all",
    "-Wl,--warn-common",
    "-Wl,--warn-section-align",
    "-Wl,--wrap=malloc",
    "-Wl,--wrap=calloc",
    "-Wl,--wrap=realloc",
    "-Wl,--wrap=free",
    "-u", "_printf_float",
    "-u", "_scanf_float"
  ],

  "linker_scripts": [
    "memmap_default.ld"
  ],

  "defines": [
    "ARDUINO_ARCH_RP2040",
    ["F_CPU", "133000000L"],
    "PICO_BOARD",
    "PICO_BUILD",
    "PICO_NO_HARDWARE",
    "PICO_ON_DEVICE",
    ["TARGET_RP2040", "1"],
    ["PICO_RP2040", "1"],
    "CFG_TUSB_MCU=OPT_MCU_RP2040",
    "LWIP_IPV4=1",
    "LWIP_IPV6=0"
  ]
}
