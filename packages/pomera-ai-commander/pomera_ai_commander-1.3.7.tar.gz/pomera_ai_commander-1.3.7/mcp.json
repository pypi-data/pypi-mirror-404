{
    "name": "pomera-ai-commander",
    "version": "1.2.0",
    "description": "Text processing toolkit with 22 MCP tools including case transformation, encoding, hashing, text analysis, and notes management for AI assistants.",
    "homepage": "https://github.com/matbanik/Pomera-AI-Commander",
    "repository": "https://github.com/matbanik/Pomera-AI-Commander",
    "license": "MIT",
    "author": "matbanik",
    "entrypoints": {
        "stdio": "python pomera_mcp_server.py"
    },
    "capabilities": {
        "tools": true,
        "resources": false,
        "prompts": false
    },
    "tools": [
        "pomera_case_transform",
        "pomera_encode",
        "pomera_line_tools",
        "pomera_whitespace",
        "pomera_string_escape",
        "pomera_sort",
        "pomera_text_stats",
        "pomera_json_xml",
        "pomera_url_parse",
        "pomera_text_wrap",
        "pomera_timestamp",
        "pomera_extract",
        "pomera_markdown",
        "pomera_translator",
        "pomera_cron",
        "pomera_word_frequency",
        "pomera_column_tools",
        "pomera_generators",
        "pomera_notes",
        "pomera_email_header_analyzer",
        "pomera_html",
        "pomera_list_compare"
    ],
    "keywords": [
        "mcp",
        "text-processing",
        "ai-tools",
        "pomera",
        "text-manipulation",
        "encoding",
        "hashing",
        "notes"
    ]
}