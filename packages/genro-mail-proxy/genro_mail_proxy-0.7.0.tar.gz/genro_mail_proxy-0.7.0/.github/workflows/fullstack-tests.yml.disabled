name: Fullstack Tests

on:
  push:
    branches: [main]
  pull_request:
    branches: [main]
  workflow_dispatch:  # Manual trigger also available

jobs:
  fullstack:
    runs-on: ubuntu-latest
    timeout-minutes: 15

    steps:
      - uses: actions/checkout@v4

      - name: Set up Python 3.11
        uses: actions/setup-python@v5
        with:
          python-version: "3.11"

      - name: Install test dependencies
        run: |
          python -m pip install --upgrade pip
          pip install -e ".[dev,postgresql,large-files]"

      - name: Create test attachments directory
        run: |
          mkdir -p tests/docker/test-attachments
          echo "Test file content" > tests/docker/test-attachments/test.txt
          dd if=/dev/urandom of=tests/docker/test-attachments/large.bin bs=1024 count=100 2>/dev/null

      - name: Start infrastructure with docker-compose
        run: |
          cd tests/docker
          docker compose -f docker-compose.fulltest.yml up -d --build
        timeout-minutes: 5

      - name: Wait for PostgreSQL and MinIO
        run: |
          echo "Waiting for PostgreSQL..."
          for i in {1..30}; do
            if docker compose -f tests/docker/docker-compose.fulltest.yml exec -T db pg_isready -U mailproxy 2>/dev/null; then
              echo "PostgreSQL is ready"
              break
            fi
            echo "Attempt $i/30..."
            sleep 2
          done

          echo "Waiting for MinIO bucket setup..."
          sleep 10

      - name: Start mail-proxy service
        run: |
          # Start mailproxy with logging to file
          GMP_DB_PATH=postgresql://mailproxy:testpassword@localhost:5433/mailproxy \
          GMP_API_TOKEN=test-api-token \
          uvicorn mail_proxy.server:app --host 0.0.0.0 --port 8000 > /tmp/mailproxy.log 2>&1 &
          echo $! > /tmp/mailproxy.pid
          echo "Mail-proxy started with PID $(cat /tmp/mailproxy.pid)"

          # Wait for mail-proxy to be ready
          echo "Waiting for mail-proxy to be ready..."
          for i in {1..60}; do
            if curl -s http://localhost:8000/health | grep -q "ok"; then
              echo "Mail-proxy is ready!"
              break
            fi
            if [ $i -eq 60 ]; then
              echo "Mail-proxy failed to start. Logs:"
              cat /tmp/mailproxy.log
              exit 1
            fi
            echo "Attempt $i/60..."
            sleep 2
          done

          # Show startup logs
          echo "=== Mail-proxy startup logs ==="
          cat /tmp/mailproxy.log

      - name: Verify all services
        run: |
          echo "Checking all services..."
          curl -sf http://localhost:8000/health || echo "WARNING: mail-proxy not responding"
          curl -sf http://localhost:8025/api/v2/messages || echo "WARNING: mailhog-tenant1 not responding"
          curl -sf http://localhost:9000/minio/health/live || echo "WARNING: minio not responding"

          echo "Service status:"
          docker compose -f tests/docker/docker-compose.fulltest.yml ps

      - name: Run fullstack tests
        run: |
          pytest tests/fullstack/ -v --tb=short
        env:
          MAILPROXY_URL: http://localhost:8000
          MAILPROXY_TOKEN: test-api-token
          MAILHOG_TENANT1_URL: http://localhost:8025
          MAILHOG_TENANT2_URL: http://localhost:8026
          MINIO_ENDPOINT: http://localhost:9000
          ECHO_SERVER_TENANT1: http://localhost:8081
          ECHO_SERVER_TENANT2: http://localhost:8082
          ATTACHMENT_SERVER_URL: http://localhost:8083

      - name: Show mail-proxy logs on failure
        if: failure()
        run: |
          echo "=== Mail-proxy logs ==="
          cat /tmp/mailproxy.log || echo "No mailproxy log file"

      - name: Show docker logs on failure
        if: failure()
        run: |
          cd tests/docker
          docker compose -f docker-compose.fulltest.yml logs --tail=100

      - name: Stop infrastructure
        if: always()
        run: |
          cd tests/docker
          docker compose -f docker-compose.fulltest.yml down -v
