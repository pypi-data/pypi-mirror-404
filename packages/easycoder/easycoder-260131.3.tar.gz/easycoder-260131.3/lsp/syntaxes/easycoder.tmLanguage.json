{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "EasyCoder",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#variables"
    },
    {
      "include": "#operators"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.easycoder",
          "match": "!.*$",
          "comment": "Line comment starting with !"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.single.easycoder",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.easycoder",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.double.easycoder",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.easycoder",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.easycoder",
          "match": "\\b([0-9]+\\.?[0-9]*|\\.[0-9]+)([eE][+-]?[0-9]+)?\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.easycoder",
          "match": "\\b(script|exit|variable|set|put|add|subtract|multiply|divide|append|clear|if|else|loop|repeat|while|until|break|continue|on|error|fork|go|gosub|return|assert|debug|log|print|read|write)\\b"
        },
        {
          "name": "keyword.other.easycoder",
          "match": "\\b(to|from|into|with|do|as|the|of|and|or|not|is|in|exists)\\b"
        },
        {
          "name": "keyword.type.easycoder",
          "match": "\\b(window|room|button|label|input|table|menu|dialog)\\b"
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "name": "variable.other.easycoder",
          "match": "\\b[A-Z][a-zA-Z0-9]*\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.easycoder",
          "match": "[><=!]="
        },
        {
          "name": "keyword.operator.easycoder",
          "match": "[><=]"
        }
      ]
    }
  },
  "scopeName": "source.easycoder"
}
