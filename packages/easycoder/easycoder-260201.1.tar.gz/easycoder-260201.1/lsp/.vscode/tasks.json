{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "lsp: compile",
      "type": "shell",
      "options": { "cwd": "${workspaceFolder}" },
      "command": "npm",
      "args": ["run", "compile"],
      "problemMatcher": ["$tsc"]
    },
    {
      "label": "lsp: watch",
      "type": "shell",
      "options": { "cwd": "${workspaceFolder}" },
      "command": "npm",
      "args": ["run", "watch"],
      "isBackground": true,
      "problemMatcher": ["$tsc-watch"]
    }
  ]
}
