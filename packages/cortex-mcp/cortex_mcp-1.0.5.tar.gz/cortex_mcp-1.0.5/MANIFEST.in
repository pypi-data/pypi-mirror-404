# Include documentation files
include README.md
include LICENSE


# Include configuration files
include requirements.txt
include pyproject.toml

# Include dashboard templates
recursive-include cortex_mcp/dashboard/templates *

# Exclude unnecessary files
global-exclude __pycache__
global-exclude *.py[cod]
global-exclude *.so
global-exclude .DS_Store
global-exclude *.swp
global-exclude *~

# Exclude test files
prune tests
prune .pytest_cache
prune htmlcov

# Exclude git and CI files
prune .git
prune .github
exclude .gitignore
exclude .gitattributes

# Exclude development files
exclude .vscode
exclude .idea
prune *.egg-info
