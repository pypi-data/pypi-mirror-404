# Include documentation
include README.md
include LICENSE
include CONTRIBUTING.md
include CLAUDE.md

# Include requirements
include requirements-dev.txt

# Exclude development files
exclude .gitignore
exclude .DS_Store

# Include bundled data files
include pathwaydb/data/go_term_names.json
recursive-include pathwaydb/data *.db

# Exclude cache and development database files
global-exclude *.pyc
global-exclude *.pyo
global-exclude __pycache__
prune .cache
prune *_cache

# Exclude test/example databases (but keep package data)
exclude *.db
exclude *.sqlite
