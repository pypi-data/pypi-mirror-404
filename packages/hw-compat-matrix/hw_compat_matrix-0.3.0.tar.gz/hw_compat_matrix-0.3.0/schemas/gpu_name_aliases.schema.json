{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/ATTMOS/hw-compat-matrix/schemas/gpu_name_aliases.schema.json",
  "title": "GPU Name Aliases",
  "description": "Maps provider-specific GPU names to canonical names",
  "type": "object",
  "required": ["schema_version", "canonical_gpus"],
  "properties": {
    "schema_version": {
      "type": "integer",
      "minimum": 1,
      "description": "Schema version number"
    },
    "canonical_gpus": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/CanonicalGPU"
      },
      "description": "List of canonical GPUs with their aliases"
    }
  },
  "$defs": {
    "CanonicalGPU": {
      "type": "object",
      "required": ["canonical_id", "canonical_name", "sm", "architecture", "aliases"],
      "properties": {
        "canonical_id": {
          "type": "string",
          "pattern": "^[a-z0-9_]+$",
          "minLength": 1,
          "description": "Machine-stable identifier (lowercase, underscore-separated, e.g., rtx_4090)"
        },
        "canonical_name": {
          "type": "string",
          "minLength": 1,
          "description": "Human-readable canonical GPU name (e.g., RTX 4090)"
        },
        "family": {
          "type": "string",
          "pattern": "^[a-z0-9_]+$",
          "minLength": 1,
          "description": "GPU family identifier for grouping variants (e.g., h100, a100)"
        },
        "sm": {
          "type": "string",
          "pattern": "^[0-9]+[a-z]?$",
          "description": "SM version (e.g., 89)"
        },
        "architecture": {
          "type": "string",
          "minLength": 1,
          "description": "Architecture name (e.g., Ada Lovelace)"
        },
        "aliases": {
          "type": "object",
          "additionalProperties": {
            "type": "array",
            "items": {
              "type": "string",
              "minLength": 1
            }
          },
          "description": "Provider-specific aliases (provider -> list of names)"
        }
      }
    }
  }
}
