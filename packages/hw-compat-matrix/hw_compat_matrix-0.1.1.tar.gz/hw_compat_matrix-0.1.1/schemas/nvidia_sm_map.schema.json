{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/ATTMOS/hw-compat-matrix/schemas/nvidia_sm_map.schema.json",
  "title": "NVIDIA SM Map",
  "description": "Maps SM versions to GPU architectures and products",
  "type": "object",
  "required": ["schema_version", "architectures"],
  "properties": {
    "schema_version": {
      "type": "integer",
      "minimum": 1,
      "description": "Schema version number"
    },
    "architectures": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/GPUArchitecture"
      },
      "description": "List of GPU architectures"
    }
  },
  "$defs": {
    "GPUArchitecture": {
      "type": "object",
      "required": ["name", "sm_versions", "compute_capabilities", "products"],
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1,
          "description": "Architecture name (e.g., Ada Lovelace)"
        },
        "sm_versions": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^[0-9]+[a-z]?$"
          },
          "minItems": 1,
          "description": "SM version strings (e.g., 89, 90a)"
        },
        "compute_capabilities": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^[0-9]+\\.[0-9]+[a-z]?$"
          },
          "minItems": 1,
          "description": "Compute capability versions (e.g., 8.9)"
        },
        "products": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          },
          "minItems": 1,
          "description": "List of GPU products"
        }
      }
    }
  }
}
