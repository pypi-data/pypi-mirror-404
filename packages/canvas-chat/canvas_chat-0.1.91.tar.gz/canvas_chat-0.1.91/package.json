{
    "name": "canvas-chat",
    "version": "0.1.14",
    "description": "A visual, non-linear chat interface where conversations are nodes on an infinite canvas",
    "type": "module",
    "scripts": {
        "test": "pixi run test-js",
        "typecheck": "tsc --noEmit",
        "lint": "eslint src/canvas_chat/static/js/*.js",
        "lint:fix": "eslint src/canvas_chat/static/js/*.js --fix",
        "format": "prettier --write src/canvas_chat/static/js/*.js src/canvas_chat/static/css/*.css",
        "format:check": "prettier --check src/canvas_chat/static/js/*.js src/canvas_chat/static/css/*.css",
        "cy:open": "cypress open",
        "cy:run": "cypress run"
    },
    "devDependencies": {
        "cypress": "^15.9.0",
        "eslint": "^8.57.0",
        "eslint-plugin-jsdoc": "^48.11.0",
        "jsdom": "^24.0.0",
        "prettier": "^3.2.5",
        "typescript": "^5.9.3"
    },
    "private": true,
    "_comment": "test script delegates to pixi - pyproject.toml is the single source of truth for test commands. See AGENTS.md for details."
}
