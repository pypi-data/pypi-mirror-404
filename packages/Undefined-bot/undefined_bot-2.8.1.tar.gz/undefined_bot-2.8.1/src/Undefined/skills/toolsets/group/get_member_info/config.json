{
    "type": "function",
    "function": {
        "name": "get_member_info",
        "description": "获取群聊成员的详细信息。支持获取：群昵称、QQ昵称、QQ号、加群时间、等级、最后发言时间、角色、头衔等。",
        "parameters": {
            "type": "object",
            "properties": {
                "group_id": {
                    "type": "integer",
                    "description": "群号。如果已在群聊中，通常会自动获取。"
                },
                "user_id": {
                    "type": "integer",
                    "description": "群成员的QQ号"
                },
                "fields": {
                    "type": "array",
                    "description": "指定要获取的字段列表。可选字段：nickname(QQ昵称)、card(群昵称)、user_id(QQ号)、join_time(加群时间)、last_sent_time(最后发言时间)、level(等级)、role(角色)、unfriendly(是否不友好)、title(头衔)、title_expire_time(头衔过期时间)、shut_up_timestamp(禁言截止时间)",
                    "items": {
                        "type": "string",
                        "enum": [
                            "nickname",
                            "card",
                            "user_id",
                            "join_time",
                            "last_sent_time",
                            "level",
                            "role",
                            "unfriendly",
                            "title",
                            "title_expire_time",
                            "shut_up_timestamp"
                        ]
                    }
                },
                "no_cache": {
                    "type": "boolean",
                    "description": "是否不使用缓存获取最新信息，默认 false",
                    "default": false
                }
            },
            "required": [
                "user_id"
            ]
        }
    }
}