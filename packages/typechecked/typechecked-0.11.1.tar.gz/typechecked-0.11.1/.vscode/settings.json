{
  "python.testing.unittestArgs": [
    "-v",
    "-s",
    ".",
    "-p",
    "test_*.py"
],
  "python.testing.pytestEnabled": true,
  "python.testing.unittestEnabled": false,
  "python.testing.cwd": "${workspaceFolder}",
  "python.venvPath": [
    "venv"
  ],
  "python.defaultInterpreterPath": "${workspaceFolder}/venv/bin/python",
  "python.terminal.activateEnvInCurrentTerminal": true,
  "explorer.autoRevealExclude": {
    ".mypy_cache": true,
    "venv": true,
    ".venv*": true,
    ".venv": true,
    "**/._.DS_Store": true,
    "**/__pycache__": true,
    "bazel-bin": true,
    "bazel-datadog": true,
    "bazel-out": true,
    "bazel-testlogs": true,
    "bazel-python-gen-tries": true,
    "coverage.lcov": true
  },
  "files.autoSave": "afterDelay",
  "files.exclude": {
    ".coverage": true,
    ".mypy_cache": true,
    ".venv": true,
    ".venv-3*": true,
    "**/._.DS_Store": true,
    "**/__pycache__": true,
    "**/perl-lang": true,
    "bazel-bin": true,
    "bazel-datadog": true,
    "bazel-out": true,
    "bazel-testlogs": true,
    "bazel-python-*": true,
    "coverage.lcov": true
  },
  "markiscodecoverage.searchCriteria": "${workspace_dir}/coverage/*dat",
  "terminal.integrated.env.linux": {
    "PYTHONPATH": "${workspaceFolder}/src;${workspaceFolder}/tests"
  },
  "terminal.integrated.env.osx": {
    "PYTHONPATH": "${workspaceFolder}/src;${workspaceFolder}/tests"
  },
  "terminal.integrated.env.windows": {
    "PYTHONPATH": "${workspaceFolder}\\src;${workspaceFolder}\\tests"
  },
  "python.REPL.enableREPLSmartSend": false,
  "flake8.args": [
    "--max-line-length=120",
    "--disable=E501"
  ],
  "python.createEnvironment.contentButton": "hide",
  "python.envFile": "${workspaceFolder}/.env",
  "python.terminal.launchArgs": [],
  "python.testing.autoTestDiscoverOnSaveEnabled": true,
  "pylint.cwd": "${workspaceFolder}/src",
  "codeQL.createQuery.qlPackLocation": "{$workspaceFolder}",
  "[python]": {
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    }
  },
  "mypy-type-checker.preferDaemon": true,
  "python.terminal.useEnvFile": true,
  "python-env.workspaceSearchPaths": [
    "venv"
  ],
  "pylint.importStrategy": "fromEnvironment",
}

