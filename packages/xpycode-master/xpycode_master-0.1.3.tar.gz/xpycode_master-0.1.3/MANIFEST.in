# Include license and documentation
include LICENSE
include README.md
include pyproject.toml

# Include all Python source files
recursive-include xpycode_master *.py
recursive-include xpycode_master *.pyi

# Include type marker
include xpycode_master/addin_launcher/py.typed

# Include docs yml file
include xpycode_master/mkdocs.yml

# Include binary assets and resources
recursive-include xpycode_master/addin_launcher/bin *
graft xpycode_master/addin_launcher/bin

# Include Python stubs
recursive-include xpycode_master/python_server/stubs *.py
recursive-include xpycode_master/python_server/stubs *.pyi

# Include manifest files
include xpycode_master/addin_launcher/bin/manifest/*.xml

# Exclude compiled files (but keep .pyd and .so from Cython compilation)
global-exclude *.pyc
global-exclude *.pyo
global-exclude *.dll
global-exclude __pycache__
global-exclude *.egg-info
global-exclude *.skip

# Exclude test and development files
recursive-exclude tests *
recursive-exclude docs *
recursive-exclude addin *
recursive-exclude inputs_for_copilot *
exclude test_*.py
exclude demo_*.py

# Exclude build artifacts
prune build
prune dist
prune .git
prune .github
prune .vs
prune node_modules
prune scripts