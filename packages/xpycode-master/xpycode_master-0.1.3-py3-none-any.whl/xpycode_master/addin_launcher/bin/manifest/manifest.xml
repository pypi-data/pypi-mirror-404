<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:type="TaskPaneApp">
  <Id>afd9acce-55df-40c6-a9c8-b0906b35d933</Id>
  <Version>0.1.0</Version>
  <ProviderName>BGE Advisory</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  <DisplayName DefaultValue="XPyCode"/>
  <Description DefaultValue="XPyCode - Excel Python Integration Add-in"/>
  <IconUrl DefaultValue="https://localhost:{{ADDIN_PORT}}/assets/icon-32.png"/>
  <HighResolutionIconUrl DefaultValue="https://localhost:{{ADDIN_PORT}}/assets/icon-64.png"/>
  <SupportUrl DefaultValue="https://localhost:{{ADDIN_PORT}}"/>
  <AppDomains>
    <AppDomain>https://localhost:{{ADDIN_PORT}}</AppDomain>
  </AppDomains>
  <Hosts>
    <Host Name="Workbook"/>
  </Hosts>
  
  <!-- ADD THIS: SharedRuntime requirement -->
  <Requirements>
    <Sets DefaultMinVersion="1.1">
      <Set Name="SharedRuntime" MinVersion="1.1"/>
    </Sets>
  </Requirements>
  
  <DefaultSettings>
    <SourceLocation DefaultValue="https://localhost:{{ADDIN_PORT}}/taskpane.html"/>
  </DefaultSettings>
  <Permissions>ReadWriteDocument</Permissions>
  
  <VersionOverrides xmlns="http://schemas.microsoft.com/office/taskpaneappversionoverrides"
                    xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
                    xsi:type="VersionOverridesV1_0">
    <Hosts>
      <Host xsi:type="Workbook">
        <Runtimes>
          <Runtime resid="Taskpane.Url" lifetime="long"/>
        </Runtimes>
        <AllFormFactors>
          <ExtensionPoint xsi:type="CustomFunctions">
            <Script>
              <SourceLocation resid="Functions.Script.Url"/>
            </Script>
            <Page>
              <SourceLocation resid="Taskpane.Url"/>
            </Page>
            <Metadata>
              <SourceLocation resid="Functions.Metadata.Url"/>
            </Metadata>
            <!-- NO <Namespace> ELEMENT HERE -->
          </ExtensionPoint>
        </AllFormFactors>
        <DesktopFormFactor>
          <GetStarted>
            <Title resid="GetStarted.Title"/>
            <Description resid="GetStarted.Description"/>
            <LearnMoreUrl resid="GetStarted.LearnMoreUrl"/>
          </GetStarted>
          <FunctionFile resid="Commands.Url"/>
          <ExtensionPoint xsi:type="PrimaryCommandSurface">
            <OfficeTab id="TabHome">
              <Group id="CommandsGroup">
                <Label resid="CommandsGroup.Label"/>
                <Icon>
                  <bt:Image size="16" resid="Icon.16x16"/>
                  <bt:Image size="32" resid="Icon.32x32"/>
                  <bt:Image size="80" resid="Icon.80x80"/>
                </Icon>
                <Control xsi:type="Button" id="TaskpaneButton">
                  <Label resid="TaskpaneButton.Label"/>
                  <Supertip>
                    <Title resid="TaskpaneButton.Label"/>
                    <Description resid="TaskpaneButton.Tooltip"/>
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="Console.16x16"/>
                    <bt:Image size="32" resid="Console.32x32"/>
                    <bt:Image size="80" resid="Console.80x80"/>
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <TaskpaneId>ButtonId1</TaskpaneId>
                    <SourceLocation resid="Taskpane.Url"/>
                  </Action>
                </Control>
              </Group>
            </OfficeTab>
          </ExtensionPoint>
        </DesktopFormFactor>
      </Host>
    </Hosts>
    <Resources>
      <bt:Images>
        <bt:Image id="Icon.16x16" DefaultValue="https://localhost:{{ADDIN_PORT}}/assets/icon-16.png"/>
        <bt:Image id="Icon.32x32" DefaultValue="https://localhost:{{ADDIN_PORT}}/assets/icon-32.png"/>
        <bt:Image id="Icon.80x80" DefaultValue="https://localhost:{{ADDIN_PORT}}/assets/icon-80.png"/>
        <bt:Image id="Console.16x16" DefaultValue="https://localhost:{{ADDIN_PORT}}/assets/icon-16.png"/>
        <bt:Image id="Console.32x32" DefaultValue="https://localhost:{{ADDIN_PORT}}/assets/icon-32.png"/>
        <bt:Image id="Console.80x80" DefaultValue="https://localhost:{{ADDIN_PORT}}/assets/icon-80.png"/>
      </bt:Images>
      <bt:Urls>
        <bt:Url id="GetStarted.LearnMoreUrl" DefaultValue="https://localhost:{{ADDIN_PORT}}"/>
        <bt:Url id="Taskpane.Url" DefaultValue="https://localhost:{{ADDIN_PORT}}/taskpane.html"/>
        <bt:Url id="Functions.Url" DefaultValue="https://localhost:{{ADDIN_PORT}}/taskpane.html"/>
        <bt:Url id="Functions.Script.Url" DefaultValue="https://localhost:{{ADDIN_PORT}}/functions.js"/>
        <bt:Url id="Functions.Metadata.Url" DefaultValue="https://localhost:{{ADDIN_PORT}}/functions.json"/>
        <bt:Url id="Commands.Url" DefaultValue="https://localhost:{{ADDIN_PORT}}/taskpane.html"/>
      </bt:Urls>
      <bt:ShortStrings>
        <!-- REMOVED: Functions.Namespace -->
        <bt:String id="GetStarted.Title" DefaultValue="Get started with XPyCode"/>
        <bt:String id="CommandsGroup.Label" DefaultValue="XPyCode"/>
        <bt:String id="TaskpaneButton.Label" DefaultValue="Open Console"/>
      </bt:ShortStrings>
      <bt:LongStrings>
        <bt:String id="GetStarted.Description" DefaultValue="XPyCode has been loaded.  Click the Show Console button on the Home tab to get started."/>
        <bt:String id="TaskpaneButton.Tooltip" DefaultValue="Click to show the XPyCode console"/>
      </bt:LongStrings>
    </Resources>
  </VersionOverrides>
</OfficeApp>
