{
  "theme_info": {
    "name": "XPy Themes",
    "version": "1.0.0"
  },
  "editor_themes": [
    {
      "id": "vs-dark",
      "name": "VS Dark"
    },
    {
      "id": "vs-light",
      "name": "VS Light"
    },
    {
      "id": "hc-black",
      "name": "High Contrast Black"
    },
    {
      "id": "hc-light",
      "name": "High Contrast Light"
    },
    {
      "id": "xpc-midnight-blue",
      "name": "XPC Midnight Blue"
    }
  ],
  "themes": {
    "xpy-dark": "XPC Dark",
    "xpy-light": "XPC Light",
    "midnight-blue": "Midnight Blue",
    "high-contrast": "High Contrast"
  },
  "colors": {
    "orange": "#F17730",
    "orange-pressed": "#d96020",
    "orange-hover": "#E67E22",
    "near-orange": "rgba(241, 119, 48, 0.8)",
    "light-orange": "rgba(241, 119, 48, 100)",
    "very-light-orange": "rgba(241, 119, 48, 50)",
    "white": "#ffffff",
    "black": "#000000",
    "light-gray": "rgba(200, 200, 200, 100)",
    "dark-gray-1": "#1e1e1e",
    "dark-gray-2": "#2d2d30",
    "dark-gray-3": "#252526",
    "dark-gray-4": "#3e3e42",
    "dark-gray-5": "#3c3c3c",
    "light-gray-1": "#f3f3f3",
    "light-gray-2": "#e8e8e8",
    "light-gray-3": "#d8d8d8",
    "light-gray-4": "#cccccc",
    "light-gray-5": "#e0e0e0",
    "text-light": "#d4d4d4",
    "text-dark": "#000000",
    "midnight-bg-1": "#0c1e2e",
    "midnight-bg-2": "#1a2f42",
    "midnight-bg-3": "#0a1a28",
    "midnight-border": "#2a3f52",
    "midnight-hover": "#1a3a52",
    "hc-hover": "#1a1a1a",
    "very-small-whitening": "rgba(255,255,255,0.01)",
    "very-small-blackening": "rgba(0,0,0,0.01)",
    "small-whitening": "rgba(255,255,255,0.05)",
    "small-blackening": "rgba(0,0,0,0.05)",
    "medium-whitening": "rgba(255,255,255,0.05)",
    "medium-blackening": "rgba(0,0,0,0.05)"
  },
  "styles": {
    "1px-solid": "1px solid",
    "2px-solid": "2px solid"
  },
  "theme_variables": {
    "almost-orange": {
      "xpy-dark": "near-orange",
      "xpy-light": "near-orange",
      "midnight-blue": "near-orange",
      "high-contrast": "orange",
      "default": "near-orange"
    },
      "bg-main": {
        "xpy-dark": "dark-gray-1",
        "xpy-light": "light-gray-1",
        "midnight-blue": "midnight-bg-1",
        "high-contrast": "black",
        "default": "dark-gray-1"
      },
      "bg-secondary": {
        "xpy-dark": "dark-gray-2",
        "xpy-light": "light-gray-2",
        "midnight-blue": "midnight-bg-2",
        "high-contrast": "black",
        "default": "dark-gray-2"
      },
      "bg-tertiary": {
        "xpy-dark": "dark-gray-3",
        "xpy-light": "white",
        "midnight-blue": "midnight-bg-3",
        "high-contrast": "black",
        "default": "dark-gray-3"
      },
      "bg-reverse": {
        "xpy-dark": "light-gray-5",
        "xpy-light": "dark-gray-5",
        "midnight-blue": "light-gray-5",
        "high-contrast": "white",
        "default": "light-gray-5"
      },
      "text-primary": {
        "xpy-dark": "text-light",
        "xpy-light": "text-dark",
        "midnight-blue": "text-light",
        "high-contrast": "white",
        "default": "text-light"
      },
      "text-secondary": {
        "xpy-dark": "black",
        "xpy-light": "white",
        "midnight-blue": "black",
        "high-contrast": "black",
        "default": "black"
      },
      "text-selected": {
        "xpy-dark": "white",
        "xpy-light": "black",
        "midnight-blue": "white",
        "high-contrast": "black",
        "default": "white"
      },
      "border-primary": {
        "xpy-dark": "dark-gray-4",
        "xpy-light": "light-gray-4",
        "midnight-blue": "midnight-border",
        "high-contrast": "white",
        "default": "dark-gray-4"
      },
      "hover-bg": {
        "xpy-dark": "dark-gray-4",
        "xpy-light": "light-gray-3",
        "midnight-blue": "midnight-border",
        "high-contrast": "hc-hover",
        "default": "dark-gray-4"
      },
      "item-hover": {
        "xpy-dark": "dark-gray-5",
        "xpy-light": "light-gray-5",
        "midnight-blue": "midnight-hover",
        "high-contrast": "hc-hover",
        "default": "dark-gray-5"
      },
      "small-shading": {
        "xpy-dark": "small-whitening",
        "xpy-light": "small-blackening",
        "midnight-blue": "small-whitening",
        "high-contrast": "small-whitening",
        "default": "small-whitening"
      },
      "very-small-shading": {
        "xpy-dark": "very-small-whitening",
        "xpy-light": "very-small-blackening",
        "midnight-blue": "very-small-whitening",
        "high-contrast": "very-small-whitening",
        "default": "very-small-whitening"
      },
      "medium-shading": {
        "xpy-dark": "medium-whitening",
        "xpy-light": "medium-blackening",
        "midnight-blue": "medium-whitening",
        "high-contrast": "medium-whitening",
        "default": "medium-whitening"
      },
      "border-style": {
        "xpy-dark": "1px-solid",
        "xpy-light": "1px-solid",
        "midnight-blue": "1px-solid",
        "high-contrast": "2px-solid",
        "default": "1px-solid"
      }
    },
  "selectors": {
    "QLabel": {
      "color": "{text-primary}",
      "background-color": "transparent"
    },
    "QMainWindow, QDockWidget, QWidget": {
      "background-color": "{bg-main}",
      "color": "{text-primary}"
    },
    "QMenuBar": {
      "background-color": "{bg-secondary}",
      "color": "{text-primary}",
      "border": {
        "high-contrast": "1px solid {white}"
      }
    },
    "QMenuBar::item:selected": {
      "background-color": "{orange}",
      "color": "{text-selected}"
    },
    "QMenu": {
      "background-color": "{bg-secondary}",
      "color": "{text-primary}",
      "border": "{border-style} {orange}",
      "padding": "4px"
    },
    "QMenu::item": {
      "padding": "6px 30px 6px 20px",
      "min-width": "150px"
    },
    "QMenu::item:selected": {
      "background-color": "{orange}",
      "color": "{text-selected}"
    },
    "QComboBox": {
      "background-color": "{bg-secondary}",
      "border": "1px solid {light-orange}",
      "border-radius": "3px",
      "padding": "4px"
    },
    "QComboBox:hover": {
      "border": "1px solid {light-orange}"
    },
    "QComboBox:focus": {
      "border": "1px solid {orange}"
    },
    "QComboBox::drop-down": {
      "border": "none"
    },
    "QTabBar::tab": {
      "background-color": "{bg-secondary}",
      "color": "{text-primary}",
      "border": {
        "high-contrast": "1px solid {white}",
        "default": "1px solid {border-primary}"
      },
      "padding": "5px"
    },
    "QTabBar::tab:selected": {
      "background-color": "{bg-main}",
      "border-bottom": {
        "high-contrast": "2px solid {orange}",
        "default": "2px solid {orange}"
      },
      "border": {
        "high-contrast": "2px solid {orange}"
      }
    },
    "QTabBar::tab:hover": {
      "background-color": "{hover-bg}"
    },
    "QDockWidget::title": {
      "background-color": "{bg-secondary}",
      "color": {
        "high-contrast": "{white}"
      },
      "padding": "4px",
      "border-bottom": "2px solid {orange}",
      "border-left": {
        "high-contrast": "1px solid {hc-hover}",
        "default": "1px solid {border-primary}"
      },
      "border-right": {
        "high-contrast": "1px solid {hc-hover}",
        "default": "1px solid {border-primary}"
      },
      "border-top": {
        "high-contrast": "1px solid {hc-hover}",
        "default": "1px solid {border-primary}"
      }
    },
    "QPushButton": {
      "background-color": "{bg-secondary}",
      "color": "{text-primary}",
      "border": "{border-style} {border-primary}",
      "padding": "5px"
    },
    "QPushButton:hover": {
      "background-color": "{orange}",
      "color": "{text-selected}",
      "border": {
        "high-contrast": "2px solid {orange}"
      }
    },
    "QPushButton:pressed": {
      "background-color": "{orange-pressed}"
    },
    "QStatusBar": {
      "background-color": "{orange}",
      "color": "{text-selected}",
      "border": {
        "high-contrast": "1px solid {white}"
      }
    },
    "QTreeWidget, QTreeView, QTableWidget, QListWidget": {
      "background-color": "{bg-tertiary}",
      "color": "{text-primary}",
      "border": "{orange}",
      "gridline-color": "{light-orange}"
    },
    "QListWidget::indicator:checked": {
      "background-color": "{light-orange}",
      "border": "1px solid {orange}"
    },
    "QListWidget::indicator:unchecked": {
      "background-color": "transparent",
      "border": "1px solid {orange}"
    },
    "QTreeWidget::item": {
      "border-bottom-not used": "1px solid {very-light-orange}"
    },
    "QTreeWidget::item:selected, QTreeView::item:selected, QTableWidget::item:selected, QListWidget::item:selected": {
      "background-color": "{light-orange}",
      "color": "{text-selected}"
    },
    "QTreeWidget::item:hover, QTreeView::item:hover, QTableWidget::item:hover, QListWidget::item:hover": {
      "background-color": "{item-hover}"
    },
    "QHeaderView::section": {
      "background-color": "{almost-orange}",
      "color": "white",
      "padding": "4px",
      "border": "1px solid {light-orange}",
      "font-weight": "bold"
    },
    "QHeaderView::section:hover": {
      "background-color": "{orange-hover}"
    },
    "QLineEdit, QTextEdit, QPlainTextEdit": {
      "background-color": "{bg-tertiary}",
      "color": "{text-primary}",
      "border": "1px solid {border-primary}"
    },
    "QLineEdit:focus, QTextEdit:focus, QPlainTextEdit:focus": {
      "border": "{border-style} {orange}"
    },
    "QCheckBox::indicator": {
      "border": "1px solid {orange}",
      "border-radius": "3px"
    },
    "QCheckBox::indicator:checked": {
      "background-color": "{light-orange}",
      "border": "1px solid {orange}"
    },
    "QCheckBox::indicator:hover": {
      "border": "1px solid {orange}"
    },
    "QToolButton:disabled": {
      "color": "gray",
      "opacity": "0.4"
    },
    "#expandableGroupTitleBar": {
      "background-color": "transparent",
      "border": "1px solid {very-light-orange}",
      "border-top-left-radius": "4px",
      "border-top-right-radius": "4px"
    },
    "#expandableGroupTitleBar[isMinimized=\"true\"]": {
      "background-color": "{orange}"
    },
    "#expandableGroupTitle": {
      "background-color": "transparent",
      "color": "{orange}",
      "font-weight": "bold"
    },
    "#expandableGroupTitle[isMinimized=\"true\"]": {
      "color": "{text-secondary}"
    },
    "#expandableGroupToggleButton": {
      "background-color": "transparent",
      "border": "1px solid {orange}",
      "border-radius": "3px",
      "color": "{orange}",
      "font-size": "12px",
      "font-weight": "bold",
      "padding": "0px 0px",
      "margin": "0px",
      "line-height": "20px"
    },
    "#expandableGroupToggleButton[isMinimized=\"true\"]": {
      "background-color": "{almost-orange}",
      "border": "2px solid {text-secondary}",
      "color": "{text-secondary}"
    },
    "#expandableGroupToggleButton:hover": {
      "background-color": "{very-light-orange}"
    },
    "#expandableGroupToggleButton[isMinimized=\"true\"]:hover": {
      "background-color": "{light-gray}"
    },
    "#expandableGroupContent": {
      "border": "1px solid {very-light-orange}",
      "border-top": "none",
      "border-bottom-left-radius": "4px",
      "border-bottom-right-radius": "4px"
    },
    "#consoleText": {
      "font-family": "'Consolas', 'Courier New', monospace",
      "font-size": "12px",
      "background-color": "{text-secondary}",
      "color": "{text-primary}",
      "border": "1px solid {very-light-orange}"
    },
    "#gettingStartedFrame": {
      "background-color": "{small-shading}",
      "border-radius": "10px;",
      "padding": "5px;"
    },
    "#gettingStartedFrame QLabel, #gettingStartedFrame QWidget": {
      "background": "{small-shading}",
      "border-radius": "4px",
      "padding": "4px 8px"
    },
    "#shortcutKeyLabel, #gettingStartedFrame #shortcutKeyLabel": {
      "background-color": "{light-orange}",
      "border-radius": "4px;",
      "padding": "4px 8px",
      "font-family": "'Consolas', 'Courier New', monospace",
      "font-size": "11px"
    },
    "#orangeButton, #gettingStartedFrame #orangeButton": {
      "background-color": "{almost-orange}",
      "color": "{text-primary}",
      "border": "none",
      "border-radius": "7px",
      "padding": "10px 20px",
      "font-size": "13px"
    },
    "#orangeButton:hover, #gettingStartedFrame #orangeButton:hover": {
      "background-color": "{orange-hover}"
    },
    "#orangeButton:pressed, #gettingStartedFrame #orangeButton:pressed": {
      "background-color": "{orange-pressed}"
    },
    "#orangeButton:disabled, #gettingStartedFrame #orangeButton:disabled": {
      "background-color": "gray",
      "opacity": "0.4"
    },
    "#welcomeMainFrame": {
      "border": "1px solid {very-light-orange}"
    },
    "#expandableGroupContainer": {
      "background-color": "transparent"
    },
    "#expandableGroupContainer QSpacerItem": {
      "background-color": "transparent"
    },
    "#emptyFrame": {
      "background-color": "tranparent"
    },
    "#tabMainWidget": {
      "background-color": "{very-small-shading}",
      "border": "2px solid {very-light-orange}"
    },
    "#tabMainWidget QLabel": {
      "background-color": "transparent"
    },
    "#projectExplorerFrame, #monacoEditor": {
      "background-color": "{small-shading}",
      "border": "2px solid {very-light-orange}"
    },
    "#centralStack": {
      "background-color": "{medium-shading}",
      "border": "2px solid {very-light-orange}"
    }
    

  }
}
