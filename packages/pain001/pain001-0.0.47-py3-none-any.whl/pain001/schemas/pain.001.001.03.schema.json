{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "pain.001.001.03 Payment Data Schema",
  "description": "Schema for ISO 20022 pain.001.001.03 Customer Credit Transfer Initiation",
  "version": "0.0.47",
  "type": "object",
  "required": [
    "id",
    "date",
    "nb_of_txs",
    "ctrl_sum",
    "initiator_name",
    "payment_information_id",
    "payment_method",
    "batch_booking",
    "service_level_code",
    "requested_execution_date",
    "debtor_name",
    "debtor_account_IBAN",
    "debtor_agent_BIC",
    "charge_bearer",
    "payment_id",
    "payment_amount",
    "currency",
    "creditor_agent_BIC",
    "creditor_name",
    "creditor_account_IBAN",
    "remittance_information"
  ],
  "properties": {
    "id": {
      "type": "string",
      "minLength": 1,
      "maxLength": 35,
      "pattern": "^[A-Za-z0-9\\-?:().,'+/\\s]*$",
      "description": "Message identification (unique identifier)"
    },
    "date": {
      "type": "string",
      "format": "date",
      "description": "Date of the payment initiation"
    },
    "nb_of_txs": {
      "type": "integer",
      "minimum": 1,
      "description": "Number of transactions"
    },
    "ctrl_sum": {
      "type": "number",
      "minimum": 0.01,
      "maximum": 999999999.99,
      "description": "Total control sum of all transactions"
    },
    "initiator_name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 70,
      "description": "Name of the payment initiator"
    },
    "payment_information_id": {
      "type": "string",
      "minLength": 1,
      "maxLength": 35,
      "pattern": "^[A-Za-z0-9\\-?:().,'+/\\s]*$",
      "description": "Unique payment information block identifier"
    },
    "payment_method": {
      "type": "string",
      "enum": [
        "TRF",
        "DD"
      ],
      "description": "Payment method (TRF = Transfer, DD = Direct Debit)"
    },
    "batch_booking": {
      "type": "boolean",
      "description": "Batch booking indicator"
    },
    "service_level_code": {
      "type": "string",
      "enum": [
        "SEPA",
        "URNS"
      ],
      "description": "Service level code"
    },
    "requested_execution_date": {
      "type": "string",
      "format": "date",
      "description": "Requested execution date"
    },
    "debtor_name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 70,
      "description": "Name of the debtor (payer)"
    },
    "debtor_account_IBAN": {
      "type": "string",
      "pattern": "^[A-Z]{2}[0-9]{2}[A-Z0-9]+$",
      "minLength": 15,
      "maxLength": 34,
      "description": "Debtor account IBAN"
    },
    "debtor_agent_BIC": {
      "type": "string",
      "pattern": "^[A-Z0-9]{6}[A-Z0-9]{2}([A-Z0-9]{3})?$",
      "description": "Debtor agent BIC code (8 or 11 characters)"
    },
    "forwarding_agent_BIC": {
      "type": "string",
      "pattern": "^[A-Z0-9]{6}[A-Z0-9]{2}([A-Z0-9]{3})?$",
      "description": "Forwarding agent BIC code (optional, 8 or 11 characters)"
    },
    "charge_bearer": {
      "type": "string",
      "enum": [
        "SLEV",
        "SHAR",
        "CRED",
        "DEBT"
      ],
      "description": "Charge bearer code (SLEV=Following, SHAR=Shared, CRED=Creditor, DEBT=Debtor)"
    },
    "payment_id": {
      "type": "string",
      "minLength": 1,
      "maxLength": 35,
      "pattern": "^[A-Za-z0-9\\-?:().,'+/\\s]*$",
      "description": "Unique payment transaction identifier"
    },
    "payment_amount": {
      "type": "number",
      "minimum": 0.01,
      "maximum": 999999999.99,
      "description": "Payment transaction amount"
    },
    "currency": {
      "type": "string",
      "pattern": "^[A-Z]{3}$",
      "description": "ISO 4217 currency code (3 uppercase letters)"
    },
    "creditor_agent_BIC": {
      "type": "string",
      "pattern": "^[A-Z0-9]{6}[A-Z0-9]{2}([A-Z0-9]{3})?$",
      "description": "Creditor agent BIC code (8 or 11 characters)"
    },
    "creditor_name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 70,
      "description": "Name of the creditor (payee)"
    },
    "creditor_account_IBAN": {
      "type": "string",
      "pattern": "^[A-Z]{2}[0-9]{2}[A-Z0-9]+$",
      "minLength": 15,
      "maxLength": 34,
      "description": "Creditor account IBAN"
    },
    "remittance_information": {
      "type": "string",
      "minLength": 1,
      "maxLength": 140,
      "description": "Remittance information (payment reference/purpose)"
    }
  },
  "additionalProperties": true
}