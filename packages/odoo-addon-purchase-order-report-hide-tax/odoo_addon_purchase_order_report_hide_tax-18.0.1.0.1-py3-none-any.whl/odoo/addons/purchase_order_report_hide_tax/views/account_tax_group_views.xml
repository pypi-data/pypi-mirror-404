<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_tax_group_tree" model="ir.ui.view">
        <field name="name">account.tax.group.list.inherit</field>
        <field name="model">account.tax.group</field>
        <field name="inherit_id" ref="account.view_tax_group_tree" />
        <field name="arch" type="xml">
            <xpath
                expr="//field[@name='advance_tax_payment_account_id']"
                position="after"
            >
                <field
                    name="show_tax_column_in_purchase_report"
                    widget="boolean_toggle"
                    optional="show"
                />
            </xpath>
        </field>
    </record>
    <record id="view_tax_group_form" model="ir.ui.view">
        <field name="name">account.tax.group.form.inherit</field>
        <field name="model">account.tax.group</field>
        <field name="inherit_id" ref="account.view_tax_group_form" />
        <field name="arch" type="xml">
            <xpath
                expr="//field[@name='advance_tax_payment_account_id']"
                position="after"
            >
                <field name="show_tax_column_in_purchase_report" />
            </xpath>
        </field>
    </record>
</odoo>
