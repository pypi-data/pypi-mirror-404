{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Morpho",
  "description": "Morpho lending protocol actions for depositing and withdrawing assets from vaults",
  "x-icon": "https://ai.service.crestal.dev/skills/morpho/morpho.svg",
  "x-tags": ["DeFi"],
  "properties": {
    "enabled": {
      "type": "boolean",
      "title": "Enabled",
      "description": "Whether this skill is enabled",
      "default": false
    },
    "states": {
      "type": "object",
      "properties": {
        "morpho_deposit": {
          "type": "string",
          "title": "Deposit",
          "enum": ["disabled", "public", "private"],
          "x-enum-title": [
            "Disabled",
            "Agent Owner + All Users",
            "Agent Owner Only"
          ],
          "description": "Deposit assets into a Morpho Vault",
          "default": "disabled"
        },
        "morpho_withdraw": {
          "type": "string",
          "title": "Withdraw",
          "enum": ["disabled", "public", "private"],
          "x-enum-title": [
            "Disabled",
            "Agent Owner + All Users",
            "Agent Owner Only"
          ],
          "description": "Withdraw assets from a Morpho Vault",
          "default": "disabled"
        }
      },
      "description": "States for each Morpho skill (disabled, public, or private)"
    }
  },
  "required": ["states", "enabled"],
  "additionalProperties": true
}
