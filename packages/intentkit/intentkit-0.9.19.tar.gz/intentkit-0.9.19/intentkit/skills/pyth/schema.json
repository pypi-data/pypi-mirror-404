{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Pyth",
  "description": "Pyth oracle price data for crypto, equities, forex, and metals",
  "x-icon": "https://ai.service.crestal.dev/skills/pyth/pyth.svg",
  "x-tags": ["Analytics", "Crypto", "DeFi"],
  "properties": {
    "enabled": {
      "type": "boolean",
      "title": "Enabled",
      "description": "Whether this skill is enabled",
      "default": false
    },
    "states": {
      "type": "object",
      "properties": {
        "pyth_fetch_price": {
          "type": "string",
          "title": "Fetch Price",
          "enum": ["disabled", "public", "private"],
          "x-enum-title": [
            "Disabled",
            "Agent Owner + All Users",
            "Agent Owner Only"
          ],
          "description": "Fetch the current price from a Pyth price feed",
          "default": "disabled"
        },
        "pyth_fetch_price_feed": {
          "type": "string",
          "title": "Fetch Price Feed",
          "enum": ["disabled", "public", "private"],
          "x-enum-title": [
            "Disabled",
            "Agent Owner + All Users",
            "Agent Owner Only"
          ],
          "description": "Find the Pyth price feed ID for a given asset symbol",
          "default": "disabled"
        }
      },
      "description": "States for each Pyth skill (disabled, public, or private)"
    }
  },
  "required": ["states", "enabled"],
  "additionalProperties": true
}
