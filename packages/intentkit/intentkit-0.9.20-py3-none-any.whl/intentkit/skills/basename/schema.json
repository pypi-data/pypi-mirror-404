{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Basename",
  "description": "Basename ENS-style name registration on Base network",
  "x-icon": "https://ai.service.crestal.dev/skills/basename/basename.svg",
  "x-tags": ["Crypto", "Identity"],
  "properties": {
    "enabled": {
      "type": "boolean",
      "title": "Enabled",
      "description": "Whether this skill is enabled",
      "default": false
    },
    "states": {
      "type": "object",
      "properties": {
        "basename_register_basename": {
          "type": "string",
          "title": "Register Basename",
          "enum": ["disabled", "public", "private"],
          "x-enum-title": [
            "Disabled",
            "Agent Owner + All Users",
            "Agent Owner Only"
          ],
          "description": "Register a Basename ENS-style domain for the agent",
          "default": "disabled"
        }
      },
      "description": "States for each Basename skill (disabled, public, or private)"
    },
    "api_key_provider": {
      "type": "string",
      "title": "API Key Provider",
      "description": "Who provides the API key",
      "enum": ["platform"],
      "x-enum-title": ["Nation Hosted"],
      "default": "platform"
    }
  },
  "required": ["states", "enabled"],
  "additionalProperties": true
}
