{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Superfluid",
  "description": "Superfluid streaming payment actions for continuous real-time token transfers",
  "x-icon": "https://ai.service.crestal.dev/skills/superfluid/superfluid.svg",
  "x-tags": ["DeFi"],
  "properties": {
    "enabled": {
      "type": "boolean",
      "title": "Enabled",
      "description": "Whether this skill is enabled",
      "default": false
    },
    "states": {
      "type": "object",
      "properties": {
        "superfluid_create_flow": {
          "type": "string",
          "title": "Create Flow",
          "enum": ["disabled", "public", "private"],
          "x-enum-title": [
            "Disabled",
            "Agent Owner + All Users",
            "Agent Owner Only"
          ],
          "description": "Create a new money stream to a recipient",
          "default": "disabled"
        },
        "superfluid_update_flow": {
          "type": "string",
          "title": "Update Flow",
          "enum": ["disabled", "public", "private"],
          "x-enum-title": [
            "Disabled",
            "Agent Owner + All Users",
            "Agent Owner Only"
          ],
          "description": "Update the flow rate of an existing stream",
          "default": "disabled"
        },
        "superfluid_delete_flow": {
          "type": "string",
          "title": "Delete Flow",
          "enum": ["disabled", "public", "private"],
          "x-enum-title": [
            "Disabled",
            "Agent Owner + All Users",
            "Agent Owner Only"
          ],
          "description": "Stop and delete an existing stream",
          "default": "disabled"
        }
      },
      "description": "States for each Superfluid skill (disabled, public, or private)"
    }
  },
  "required": ["states", "enabled"],
  "additionalProperties": true
}
