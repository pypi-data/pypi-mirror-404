def non_py26_test() -> bool:
    """Tests for any non-py26 version."""
    test: dict = {}
    exec("a = 1", test)
    assert test["a"] == 1
    exec("a = 2", globals(), test)
    assert test["a"] == 2
    test: dict = {}
    exec("b = mod(5, 3)", globals(), test)
    assert test["b"] == 2
    assert 5 .bit_length() == 3
    assert 5 .imag == 0
    return True


