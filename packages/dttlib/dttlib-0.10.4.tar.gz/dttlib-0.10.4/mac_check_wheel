#!/bin/zsh

PYVER=$1
VENV=.venv_wheel_test

if [[ $CONDA_SHLVL > 0 ]]
then
	hook="$( conda shell.zsh hook 2> /dev/null )"
	eval $hook
fi
while [[ $CONDA_SHLVL > 0 ]]
do
	conda deactivate
done

rm -rf $VENV 
python3 -m venv $VENV 
. $VENV/bin/activate
pip install dist/*$PYVER*.whl pytest
$VENV/bin/pytest

