/* Tinman TUI - Superfile-inspired theme (layout-safe) */

$bg: #0a0d12;
$panel-bg: #0f141c;
$panel-strong-bg: #131b26;
$border: #243042;
$border-strong: #2f3e54;
$text: #e7edf5;
$muted: #93a3bd;
$accent: #46f2b3;
$accent-strong: #19d392;
$accent-cool: #8ad7ff;
$danger: #ff6363;
$warning: #f6c36b;
$success: #37e59b;
$glow: #7af2c4;

Screen {
    background: $bg;
    color: $text;
}

#main-container {
    width: 100%;
    height: 100%;
    background: $bg;
    padding: 1 2;
    layout: vertical;
}

#header {
    height: 7;
    width: 100%;
    background: $panel-strong-bg;
    border: round $border-strong;
    padding: 0 1;
}

#header Static {
    color: $accent;
    text-style: bold;
}

#header-info {
    padding-left: 2;
    align: left middle;
}

.header-subtitle {
    color: $muted;
    text-style: bold;
}

.header-meta {
    color: $accent-cool;
}

#ascii-logo {
    color: $accent;
    text-style: bold;
}

#status-line Static {
    color: $muted;
}

#status-line {
    dock: right;
    width: 24;
    height: 5;
    padding-right: 2;
}

#header-info {
    width: 1fr;
    padding-left: 2;
    align: left middle;
}

#ascii-logo {
    width: 30;
}

#status-line {
    align: right middle;
}

#review-demo-report,
#review-open-report {
    min-width: 18;
}

#review-refresh-db {
    min-width: 16;
}

.review-actions Button {
    min-width: 12;
    height: 3;
    content-align: center middle;
    border: round $border-strong;
    background: $panel-bg;
    text-style: bold;
}

#version {
    color: $accent-cool;
}

#last-event {
    color: $muted;
}

#nav-bar {
    height: 3;
    width: 100%;
    background: $panel-bg;
    border: round $border-strong;
    padding: 0 1;
}

#nav-bar Button {
    background: transparent;
    color: $text;
    border: none;
    min-width: 10;
    margin: 0 0;
    padding: 0 1;
    text-style: bold;
}

Button {
    color: $text;
}

TabPane Button {
    min-width: 12;
    height: 3;
    content-align: center middle;
    border: round $border-strong;
    background: $panel-bg;
    text-style: bold;
    margin-right: 1;
}

Button.pressed {
    background: $panel-strong-bg;
    border: round $accent;
    color: $accent;
}

#start-run {
    background: $panel-strong-bg;
    color: $text;
    text-style: bold;
    border: round $success;
}

#stop-run {
    background: $panel-strong-bg;
    color: $text;
    text-style: bold;
    border: round $danger;
}

#nav-bar Button:hover {
    background: $panel-strong-bg;
    color: $accent;
}

#nav-bar Button:focus {
    background: $panel-strong-bg;
    color: $accent;
    text-style: bold;
}

#nav-bar Button.-active {
    background: $panel-strong-bg;
    color: $accent;
    text-style: bold;
    border: none;
}

#content {
    width: 100%;
    height: 1fr;
    background: $bg;
    padding: 1 1;
    layout: vertical;
}

TabbedContent {
    height: 1fr;
    layout: vertical;
}

TabPane {
    height: 1fr;
    padding: 1 1;
}

.tab-scroll {
    height: 1fr;
}

#demos-scroll {
    height: 1fr;
    padding-bottom: 1;
}


.panel-title {
    color: $text;
    text-style: bold;
    background: $panel-bg;
    padding: 0 1;
    border: round $border-strong;
    margin-bottom: 1;
    height: 3;
    content-align: left middle;
}

.panel-body {
    padding: 0 1;
    margin-bottom: 1;
    layout: vertical;
    height: auto;
    width: 100%;
}

.button-row {
    height: 3;
    align: left middle;
    padding: 0 1;
    margin-bottom: 1;
}

#setup-checklist {
    height: auto;
}

#review-demo-report {
    min-width: 20;
}

#review-open-report {
    min-width: 20;
}

.log-panel {
    border: round $border-strong;
    background: $panel-strong-bg;
    padding: 1;
}

#activity-log {
    height: 1fr;
}

#setup-log,
#review-log,
#actions-log,
#demos-log,
#model-log {
    height: 5;
}

.progress-label {
    color: $muted;
}

.inline-row {
    height: 3;
    align: left middle;
    padding: 0 1;
}

.demo-row {
    height: 3;
    margin-bottom: 1;
}

.demo-field-row {
    height: 3;
    margin-bottom: 1;
}

#focus-label,
#run-controls-label,
#demo-name-label,
#demo-args-label {
    width: 14;
}

Input {
    width: 1fr;
    height: 3;
}

DataTable {
    background: $panel-bg;
    border: round $border-strong;
}

#review-hypotheses-table,
#review-failures-table,
#review-interventions-table {
    height: 6;
}

#actions-failures-table,
#actions-interventions-table {
    height: 8;
}

DataTable > .datatable--header {
    background: $panel-strong-bg;
    color: $accent;
    text-style: bold;
}

DataTable > .datatable--cursor {
    background: $accent-strong;
    color: $bg;
}

#chat-log {
    height: 1fr;
    border: round $border-strong;
    background: $panel-strong-bg;
    padding: 1;
    margin-bottom: 1;
}

#chat-input {
    height: 3;
    border: round $border-strong;
    background: $panel-bg;
    color: $text;
}

#chat-input:focus {
    border: round $accent-cool;
}

.user-message {
    color: $accent;
    margin-bottom: 1;
}

.assistant-message {
    color: $text;
    margin-bottom: 1;
}

.empty-state {
    color: $muted;
    text-align: center;
    padding: 1;
}

.demo-warning {
    color: $warning;
    text-style: bold;
    padding: 0 1;
}

.demo-status {
    color: $muted;
    padding: 0 1;
}

.demo-status-ok {
    color: $success;
    text-style: bold;
}

.demo-status-missing {
    color: $warning;
    text-style: bold;
}
.detail-panel {
    min-height: 3;
    height: auto;
    border: round $border-strong;
    background: $panel-bg;
    color: $text;
    padding: 0 1;
}

#run-summary {
    height: 3;
}

#approval-modal {
    align: center middle;
    width: 74;
    height: auto;
    max-height: 80%;
    border: round $accent;
    background: $panel-bg;
    padding: 1 2;
}

#approval-modal .modal-title {
    color: $accent;
    text-style: bold;
    text-align: center;
    padding-bottom: 1;
}

#approval-modal .modal-content {
    color: $text;
    padding: 1 0;
}

#approval-modal .modal-actions {
    layout: horizontal;
    align: center middle;
    height: auto;
    padding-top: 1;
}

#approval-modal Button {
    margin: 0 2;
    min-width: 12;
}

#approval-modal #approve-btn {
    background: $success;
    color: $bg;
    border: solid $success;
}

#approval-modal #reject-btn {
    background: $danger;
    color: $bg;
    border: solid $danger;
}

#approval-modal #details-btn {
    background: $panel-strong-bg;
    color: $accent;
    border: round $accent;
}

#footer {
    height: 2;
    width: 100%;
    background: $panel-strong-bg;
    border: none;
    padding: 0 1;
}

#footer Static {
    color: $muted;
}

.metric-label {
    color: $muted;
}

.metric-value {
    color: $accent;
    text-style: bold;
}

Scrollbar {
    background: $panel-strong-bg;
}

ScrollbarSlider {
    background: $border-strong;
}

ScrollbarSlider:hover {
    background: $accent;
}

LoadingIndicator {
    color: $accent;
}
.status-muted {
    color: $muted;
}

.status-ok {
    color: $success;
    text-style: bold;
}

.status-warn {
    color: $warning;
}

Tabs {
    display: none;
}
