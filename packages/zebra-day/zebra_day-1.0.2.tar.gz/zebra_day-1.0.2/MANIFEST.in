# Include documentation
include README.md
include LICENSE
include MODERNIZE.md

# Include package data
recursive-include zebra_day/bin *
recursive-include zebra_day/etc *
recursive-include zebra_day/static *
recursive-include zebra_day/files *
recursive-include zebra_day/logs *

# Include requirements files
include requirements.txt
include requirements-dev.txt
include pyproject.toml

# Exclude compiled files and caches
global-exclude *.pyc
global-exclude *.pyo
global-exclude __pycache__
global-exclude *.so
global-exclude .git*
global-exclude .DS_Store

