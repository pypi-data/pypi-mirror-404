"""Project specification for {{ project_name }}."""

from prisme.spec.project import (
    AuthConfig,
    BackendConfig,
{% if include_ci %}
    CIConfig,
{% endif %}
    DatabaseConfig,
    DesignConfig,
{% if include_docker %}
    DockerConfig,
{% endif %}
    ExposureConfig,
    FrontendConfig,
    ProjectSpec,
    TestingConfig,
)

project_spec = ProjectSpec(
    name="{{ project_name }}",
    title="{{ project_title }}",
    description="{{ description }}",
    backend=BackendConfig(
        module_name="{{ project_name_snake }}",
    ),
    frontend=FrontendConfig(
        enabled=True,
    ),
    exposure=ExposureConfig(),
    auth=AuthConfig(),
    database=DatabaseConfig(
        engine="{{ database }}",
    ),
    design=DesignConfig(),
    testing=TestingConfig(),
{% if include_docker %}
    docker=DockerConfig(
        include_redis={{ include_redis }},
    ),
{% endif %}
{% if include_ci %}
    ci=CIConfig(),
{% endif %}
)
