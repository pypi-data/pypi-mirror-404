import React, { useState, useEffect } from 'react';
import type { JSX } from 'react';
import { adminApi } from '../../lib/adminApi';

interface Role {
  name: string;
  permissions: string[];
  description?: string;
  userCount?: number;
}

export default function AdminRoles(): JSX.Element {
  const [roles, setRoles] = useState<Role[]>([]);
  const [loading, setLoading] = useState(true);

  useEffect(() => {
    adminApi.listRoles()
      .then(setRoles)
      .catch(console.error)
      .finally(() => setLoading(false));
  }, []);

  if (loading) {
    return (
      <div className="p-8 text-center">
        <p className="text-muted">Loading roles...</p>
      </div>
    );
  }

  return (
    <div className="space-y-6">
      <div className="flex items-center justify-between">
        <div>
          <h1 className="text-xl font-semibold text-foreground">Roles</h1>
          <p className="text-sm text-muted">Manage roles and their permissions</p>
        </div>
      </div>

      <div className="card overflow-hidden">
        <table className="w-full text-sm">
          <thead className="bg-surface-sunken">
            <tr>
              <th className="px-4 py-3 text-left text-xs font-medium text-muted">Role</th>
              <th className="px-4 py-3 text-left text-xs font-medium text-muted">Description</th>
              <th className="px-4 py-3 text-left text-xs font-medium text-muted">Permissions</th>
              <th className="px-4 py-3 text-right text-xs font-medium text-muted">Users</th>
            </tr>
          </thead>
          <tbody className="divide-y divide-border">
            {roles.map((role) => (
              <tr key={role.name} className="hover:bg-surface-sunken transition-colors">
                <td className="px-4 py-3 font-medium text-foreground">{role.name}</td>
                <td className="px-4 py-3 text-muted">{role.description || '—'}</td>
                <td className="px-4 py-3">
                  <div className="flex flex-wrap gap-1">
                    {role.permissions.slice(0, 3).map((perm) => (
                      <span
                        key={perm}
                        className="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-surface-sunken text-foreground"
                      >
                        {perm}
                      </span>
                    ))}
                    {role.permissions.length > 3 && (
                      <span className="text-xs text-muted">
                        +{role.permissions.length - 3} more
                      </span>
                    )}
                  </div>
                </td>
                <td className="px-4 py-3 text-right text-muted">{role.userCount ?? '—'}</td>
              </tr>
            ))}
          </tbody>
        </table>
        {roles.length === 0 && (
          <div className="p-8 text-center">
            <p className="text-muted">No roles defined</p>
          </div>
        )}
      </div>
    </div>
  );
}
