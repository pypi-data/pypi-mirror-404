            </div>
            <ul className="divide-y divide-border">
              {data.{{ rel.name }}.map((item: any) => (
                <li
                  key={item.id}
                  className="px-4 py-3 text-sm text-foreground hover:bg-surface-sunken cursor-pointer"
                  onClick={() => navigate(`/{{ rel.plural_kebab }}/${item.id}`)}
                >
                  {item.name || item.title || `{{ rel.target_model }} #${item.id}`}
                </li>
              ))}
            </ul>
          </div>
        )}
{% endfor %}
      </div>
{% endif %}
