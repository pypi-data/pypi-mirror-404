{
  "type": "object",
  "title": "System Notification Request",
  "required": [
    "priority",
    "types"
  ],
  "properties": {
    "types": {
      "type": "array",
      "items": {
        "enum": [
          "web",
          "mobile",
          "sms"
        ],
        "type": "string"
      },
      "title": "Send to"
    },
    "status": {
      "enum": [
        "pending",
        "finished"
      ],
      "type": "string",
      "default": "pending"
    },
    "msisdns": {
      "type": "array",
      "items": {
        "type": "string",
        "title": "MSISDN"
      },
      "title": "Send To"
    },
    "priority": {
      "enum": [
        "high",
        "medium",
        "low"
      ],
      "type": "string"
    },
    "push_only": {
      "type": "boolean",
      "title": "Push Only",
      "description": "If marked as 'yes', the notification won't be stored for the user's future access"
    },
    "sender_id": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "governorate": {
      "type": "object",
      "properties": {
        "shortname": {
          "type": "string"
        },
        "sector_shortname": {
          "type": "string"
        }
      }
    },
    "filter_rules": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "key": {
            "type": "string"
          },
          "value": {
            "type": "string"
          }
        }
      }
    },
    "scheduled_at": {
      "type": "integer",
      "format": "date-time"
    }
  }
}