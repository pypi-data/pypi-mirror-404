    "filter_types": {
      "type": "array",
      "items": {
        "enum": [
          "user",
          "group",
          "folder",
          "schema",
          "content",
          "acl",
          "comment",
          "media",
          "locator",
          "relationship",
          "alteration",
          "history",
          "space",
          "permission",
          "role",
          "ticket",
          "plugin_wrapper"
