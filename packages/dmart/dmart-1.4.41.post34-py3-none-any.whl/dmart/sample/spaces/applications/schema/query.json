      "title": "Limit"
    },
    "offset": {
      "type": "integer",
      "title": "Offset"
    },
    "search": {
      "type": "string",
      "title": "Redis Search String"
    },
    "sort_by": {
      "type": "string",
      "title": "Sort By"
    },
    "sort_type": {
      "enum": [
        "ascending",
        "descending"
      ],
      "type": "string",
      "title": "Sort Type"
