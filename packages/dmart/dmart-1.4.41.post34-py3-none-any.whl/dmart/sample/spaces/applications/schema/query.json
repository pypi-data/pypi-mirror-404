    "query_subpath": {
      "type": "string",
      "title": "Subpath"
    },
    "exclude_fields": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "title": "Exclude Fields"
    },
    "include_fields": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "title": "Include Fields"
    },
    "highlight_fields": {
      "type": "object",
      "title": "Highlight Fields"
    },
    "filter_shortnames": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "title": "Filter Shortnames"
    },
    "filter_schema_names": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "title": "Filter Schema Names"
    },
