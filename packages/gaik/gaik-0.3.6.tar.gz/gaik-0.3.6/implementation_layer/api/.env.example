# GAIK API Configuration
# Copy this file to .env and fill in the values

# ============================================
# REQUIRED - API Authentication
# ============================================
# Generate a secure key: python -c "import secrets; print(secrets.token_urlsafe(32))"
API_KEY=your-secure-api-key-here

# ============================================
# OpenAI / Azure OpenAI Configuration
# ============================================

# Use Azure OpenAI (true) or standard OpenAI (false)
USE_AZURE=true

# --- Standard OpenAI (if USE_AZURE=false) ---
OPENAI_API_KEY=sk-your-openai-api-key

# --- Azure OpenAI (if USE_AZURE=true) ---
AZURE_API_KEY=your-azure-api-key
AZURE_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_API_VERSION=2025-03-01-preview
AZURE_DEPLOYMENT=gpt-5.1
AZURE_TRANSCRIPTION_MODEL=whisper

# ============================================
# OPTIONAL - Server Settings
# ============================================
HOST=0.0.0.0
PORT=8000

# Enable debug mode (shows /docs endpoint)
DEBUG=false

# ============================================
# OPTIONAL - CORS Origins (comma-separated)
# ============================================
# CORS_ORIGINS=https://example.com,https://app.example.com

# ============================================
# OPTIONAL - File Limits
# ============================================
MAX_FILE_SIZE_MB=100
