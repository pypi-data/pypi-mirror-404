{
  "manifest_version": 3,
  "name": "EnvGen Recorder",
  "version": "1.0.0",
  "description": "Records browser sessions with video and UI events",
  "permissions": [
    "activeTab",
    "tabCapture",
    "storage",
    "unlimitedStorage",
    "downloads",
    "offscreen",
    "webRequest",
    "scripting",
    "sidePanel",
    "tabs"
  ],
  "host_permissions": [
    "https://*.sims.plato.so/*",
    "https://sims.plato.so/*",
    "https://*.dev.sims.plato.so/*",
    "https://*.staging.sims.plato.so/*",
    "https://*.web.plato.so/*",
    "http://localhost:*/*",
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {},
  "side_panel": {
    "default_path": "popup.html"
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start",
      "all_frames": false
    }
  ],
  "commands": {
    "toggle-pause": {
      "suggested_key": {
        "default": "Ctrl+Shift+Space",
        "mac": "Command+Shift+Space"
      },
      "description": "Toggle pause marker (recording continues)"
    }
  }
}
