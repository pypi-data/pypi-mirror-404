{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2022",
    "outDir": "../client/out/shared",
    "lib": ["ES2022"],
    "sourceMap": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true
  },
  "include": ["**/*"],
  "exclude": ["node_modules"]
}
