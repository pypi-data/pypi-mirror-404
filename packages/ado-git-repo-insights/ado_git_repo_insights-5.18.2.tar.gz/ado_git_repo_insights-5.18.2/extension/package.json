{
  "name": "ado-git-repo-insights-extension",
  "version": "1.0.0",
  "description": "ADO Git Repo Insights Extension UI",
  "private": true,
  "packageManager": "pnpm@9.15.0",
  "scripts": {
    "build:tsc": "tsc",
    "build:check": "tsc --noEmit",
    "clean:ui": "node -e \"const fs=require('fs'),p=require('path'),d=p.resolve(__dirname,'dist/ui');if(fs.existsSync(d)){fs.rmSync(d,{recursive:true,force:true});console.log('Cleaned',d)}else{console.log('Already clean:',d)}\"",
    "build:ui": "node scripts/bundle-ui.mjs",
    "build": "pnpm run build:tsc && pnpm run build:ui",
    "lint": "eslint ui/ --max-warnings=0",
    "lint:all": "eslint ui/ tests/",
    "depcruise": "npx depcruise ui --config .dependency-cruiser.cjs",
    "format": "prettier --write \"**/*.{ts,js,json,md}\" --ignore-path ../.prettierignore",
    "format:check": "prettier --check \"**/*.{ts,js,json,md}\" --ignore-path ../.prettierignore",
    "pretest": "pnpm run build:ui",
    "test": "pnpm run test:unit",
    "test:unit": "jest --testPathIgnorePatterns=python-integration --testPathIgnorePatterns=vsix-artifact-inspection",
    "test:all": "jest --testPathIgnorePatterns=vsix-artifact-inspection",
    "test:watch": "jest --watch --testPathIgnorePatterns=python-integration",
    "test:coverage": "jest --coverage --testPathIgnorePatterns=python-integration",
    "pretest:ci": "pnpm run build:ui",
    "test:ci": "jest --ci --coverage --reporters=default --reporters=jest-junit --testPathIgnorePatterns=vsix-artifact-inspection",
    "test:vsix": "jest --ci --testPathPatterns vsix-artifact-inspection",
    "perf:update-baseline": "npx ts-node scripts/update-perf-baseline.ts",
    "copy-sdk": "node scripts/copy-vss-sdk.mjs",
    "postinstall": "node scripts/copy-vss-sdk.mjs",
    "stage:tasks": "node scripts/stage-task-deps.mjs",
    "clean:tasks": "node scripts/clean-task-deps.mjs",
    "package:vsix": "pnpm run build && pnpm run stage:tasks && pnpm exec tfx-cli extension create --manifest-globs vss-extension.json",
    "hooks:precommit": "cd .. && pre-commit run --all-files",
    "hooks:prepush": "cd .. && bash .husky/pre-push"
  },
  "devDependencies": {
    "@jest/globals": "^30.0.0",
    "@types/jest": "^30.0.0",
    "@types/jsdom": "^21.1.7",
    "eslint-plugin-security": "^3.0.0",
    "@types/node": "^25.0.0",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "dependency-cruiser": "^17.3.7",
    "esbuild": "^0.27.0",
    "eslint": "^9.18.0",
    "jest": "^30.0.0",
    "jest-environment-jsdom": "^30.0.0",
    "jest-junit": "^16.0.0",
    "prettier": "^3.8.1",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.53.1"
  },
  "jest-junit": {
    "outputDirectory": ".",
    "outputName": "test-results.xml"
  },
  "dependencies": {
    "vss-web-extension-sdk": "^5.141.0"
  }
}
