{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "insights.schema.json",
  "title": "Insights Artifact",
  "description": "AI-generated insights for PR Insights dashboard",
  "type": "object",
  "required": ["schema_version", "generated_at", "insights"],
  "properties": {
    "schema_version": {
      "type": "integer",
      "minimum": 1,
      "maximum": 1,
      "description": "Schema version (currently only version 1 supported)"
    },
    "generated_at": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of generation"
    },
    "is_stub": {
      "type": "boolean",
      "description": "True if synthetic/preview data"
    },
    "insights": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/InsightItem"
      },
      "description": "Array of insight items"
    }
  },
  "$defs": {
    "InsightItem": {
      "type": "object",
      "required": ["id", "category", "severity", "title", "description"],
      "properties": {
        "id": {
          "oneOf": [
            { "type": "string" },
            { "type": "integer" }
          ],
          "description": "Unique identifier for stable ordering"
        },
        "category": {
          "type": "string",
          "description": "Category for grouping"
        },
        "severity": {
          "type": "string",
          "enum": ["critical", "warning", "info"],
          "description": "Severity level"
        },
        "title": {
          "type": "string",
          "description": "Short insight title"
        },
        "description": {
          "type": "string",
          "description": "Detailed insight description"
        },
        "data": {
          "$ref": "#/$defs/InsightData"
        },
        "affected_entities": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/AffectedEntity"
          }
        },
        "recommendation": {
          "$ref": "#/$defs/Recommendation"
        }
      }
    },
    "InsightData": {
      "type": "object",
      "required": ["metric_name", "current_value"],
      "properties": {
        "metric_name": {
          "type": "string"
        },
        "current_value": {
          "type": "number"
        },
        "previous_value": {
          "type": "number"
        },
        "change_percent": {
          "type": "number"
        },
        "trend": {
          "type": "string",
          "enum": ["up", "down", "stable"]
        }
      }
    },
    "AffectedEntity": {
      "type": "object",
      "required": ["type", "id", "name"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["repository", "team", "user"]
        },
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        }
      }
    },
    "Recommendation": {
      "type": "object",
      "required": ["action"],
      "properties": {
        "action": {
          "type": "string"
        },
        "effort": {
          "type": "string",
          "enum": ["low", "medium", "high"]
        },
        "priority": {
          "type": "string",
          "enum": ["low", "medium", "high"]
        }
      }
    }
  }
}
