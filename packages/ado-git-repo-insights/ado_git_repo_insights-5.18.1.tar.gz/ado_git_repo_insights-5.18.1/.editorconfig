# EditorConfig: https://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.{js,ts,json,yml,yaml}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

# Husky hooks - critical to be LF
[.husky/*]
end_of_line = lf

# Windows batch files
[*.{bat,cmd}]
end_of_line = crlf
