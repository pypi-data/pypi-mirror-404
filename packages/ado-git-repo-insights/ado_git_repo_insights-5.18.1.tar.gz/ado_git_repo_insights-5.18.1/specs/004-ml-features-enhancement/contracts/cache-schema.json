{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "insights-cache-v1",
  "title": "Insights Cache Schema",
  "description": "Schema for insights/cache.json (12-hour TTL cache)",
  "type": "object",
  "required": ["schema_version", "cached_at", "expires_at", "input_hash", "prompt_version", "insights"],
  "properties": {
    "schema_version": {
      "type": "integer",
      "const": 1
    },
    "cached_at": {
      "type": "string",
      "format": "date-time"
    },
    "expires_at": {
      "type": "string",
      "format": "date-time"
    },
    "input_hash": {
      "type": "string",
      "pattern": "^sha256:[a-f0-9]{64}$"
    },
    "prompt_version": {
      "type": "string"
    },
    "insights": {
      "type": "array",
      "minItems": 3,
      "maxItems": 3,
      "items": {
        "type": "object"
      }
    }
  }
}
