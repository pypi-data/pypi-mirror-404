<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="odoo_configuration_change_record_view_search" model="ir.ui.view">
        <field name="name">odoo_configuration_change_record - search</field>
        <field name="model">odoo_configuration_change_record</field>
        <field name="mode">primary</field>
        <field
            name="inherit_id"
            ref="ssi_transaction_mixin.mixin_transaction_view_search"
        />
        <field name="arch" type="xml">
            <search />
        </field>
    </record>

    <record id="odoo_configuration_change_record_view_tree" model="ir.ui.view">
        <field name="name">odoo_configuration_change_record - tree</field>
        <field name="model">odoo_configuration_change_record</field>
        <field name="mode">primary</field>
        <field
            name="inherit_id"
            ref="ssi_transaction_mixin.mixin_transaction_view_tree"
        />
        <field name="arch" type="xml">
            <data>
                <xpath expr="//field[@name='company_id']" position="after">
                    <field name="date" optional="hide" />
                    <field name="partner_id" widget="many2one_avatar" />
                    <field
                        name="contact_partner_id"
                        optional="hide"
                        widget="many2one_avatar"
                    />
                    <field name="summary" />
                    <field
                        name="odoo_implementation_id"
                        domain="[('partner_id','=',partner_id)]"
                    />
                </xpath>
            </data>
        </field>
    </record>

    <record id="odoo_configuration_change_record_view_form" model="ir.ui.view">
        <field name="name">odoo_configuration_change_record - form</field>
        <field name="model">odoo_configuration_change_record</field>
        <field name="mode">primary</field>
        <field
            name="inherit_id"
            ref="ssi_transaction_mixin.mixin_transaction_view_form"
        />
        <field name="arch" type="xml">
            <data>
                <xpath expr="//field[@name='user_id']" position="after">
                    <field name="partner_id" widget="many2one_avatar" />
                    <field
                        name="allowed_contact_ids"
                        widget="many2many_tags"
                        invisible="1"
                    />
                    <field
                        name="contact_partner_id"
                        widget="many2one_avatar"
                        domain="[('id','in',allowed_contact_ids)]"
                    />
                    <field name="odoo_implementation_id" />
                </xpath>
                <xpath expr="//group[@name='header_right']" position="inside">
                    <field name="date" />
                </xpath>
                <xpath expr="//group[@name='header_center']" position="inside">
                    <label for="summary" colspan="2" />
                    <field name="summary" nolabel="1" colspan="2" />
                </xpath>
                <xpath expr="//page[1]" position="before">
                    <page string="Details">
                        <field name="detail_ids">
                            <tree>
                                <field name="model_name" />
                                <field name="mode" />
                                <field name="note" />
                            </tree>
                            <form>
                                <sheet>
                                    <group>
                                        <field name="model_name" />
                                        <field name="mode" />
                                        <field
                                            name="audit_log_url"
                                            widget="url"
                                            attrs="{'invisible': [('mode', '!=', 'audit_log_url')]}"
                                        />
                                        <field
                                            name="video_log_url"
                                            widget="url"
                                            attrs="{'invisible': [('mode', '!=', 'video_log_url')]}"
                                        />
                                        <field
                                            name="before_attachment_ids"
                                            widget="many2many_binary"
                                            attrs="{'invisible': [('mode', '!=', 'manual')]}"
                                        />
                                        <field
                                            name="after_attachment_ids"
                                            widget="many2many_binary"
                                            attrs="{'invisible': [('mode', '!=', 'manual')]}"
                                        />
                                        <field name="note" />
                                    </group>
                                </sheet>
                            </form>
                        </field>
                    </page>
                </xpath>
            </data>
        </field>
    </record>

    <record id="odoo_configuration_change_record_action" model="ir.actions.act_window">
        <field name="name">Odoo Configuration Change Record</field>
        <field name="res_model">odoo_configuration_change_record</field>
        <field
            name="search_view_id"
            ref="odoo_configuration_change_record_view_search"
        />
        <field name="view_mode">tree,form</field>
        <field
            name="context"
        >{'search_default_dom_draft': 1, 'search_default_dom_open': 1, 'search_default_dom_confirm': 1, 'search_default_dom_ready': 1}</field>
    </record>

    <menuitem
        id="odoo_configuration_change_record_menu"
        name="Configuration Change Records"
        parent="menu_root_odoo"
        action="odoo_configuration_change_record_action"
        groups="odoo_configuration_change_record_viewer_group"
        sequence="60"
    />
</odoo>
