<odoo>
<!-- Header -->
<record id="policy_template_odoo_configuration_change_record" model="policy.template">
    <field name="name">Standard</field>
    <field name="model_id" ref="model_odoo_configuration_change_record" />
    <field
            name="state_field_id"
            search="[('model_id.model','=','odoo_configuration_change_record'),('name','=','state')]"
        />
    <field name="sequence" eval="100" />
    <field name="python_code">result=True</field>
</record>

<!-- Confirm -->
<record
        id="policy_template_odoo_configuration_change_record_confirm"
        model="policy.template_detail"
    >
    <field name="template_id" ref="policy_template_odoo_configuration_change_record" />
    <field
            name="field_id"
            search="[('model_id.model','=','odoo_configuration_change_record'),('name','=','confirm_ok')]"
        />
    <field name="restrict_state" eval="1" />
    <field
            name="state_ids"
            search="[('field_id.model_id.model','=','odoo_configuration_change_record'),('value','=','draft')]"
        />
    <field name="restrict_user" eval="1" />
    <field name="computation_method">use_group</field>
    <field
            name="group_ids"
            eval="[(6,0,[ref('odoo_configuration_change_record_user_group')])]"
        />
    <field name="restrict_additional" eval="0" />
</record>

<!-- Approve -->
<record
        id="policy_template_odoo_configuration_change_record_approve"
        model="policy.template_detail"
    >
    <field name="template_id" ref="policy_template_odoo_configuration_change_record" />
    <field
            name="field_id"
            search="[('model_id.model','=','odoo_configuration_change_record'),('name','=','approve_ok')]"
        />
    <field name="restrict_state" eval="1" />
    <field
            name="state_ids"
            search="[('field_id.model_id.model','=','odoo_configuration_change_record'),('value','=','confirm')]"
        />
    <field name="restrict_user" eval="0" />
    <field name="restrict_additional" eval="1" />
    <field name="additional_python_code">result = False
if env.user.id in document.active_approver_user_ids.ids:
    result = True</field>
</record>

