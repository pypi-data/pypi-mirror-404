<!-- Restart Approval -->
<record
        id="policy_template_odoo_configuration_change_record_restart_approval"
        model="policy.template_detail"
    >
    <field name="template_id" ref="policy_template_odoo_configuration_change_record" />
    <field
            name="field_id"
            search="[('model_id.model','=','odoo_configuration_change_record'),('name','=','restart_approval_ok')]"
        />
    <field name="restrict_state" eval="1" />
    <field
            name="state_ids"
            search="[('field_id.model_id.model','=','odoo_configuration_change_record'),('value','in',['confirm'])]"
        />
    <field name="restrict_user" eval="1" />
    <field name="computation_method">use_group</field>
    <field
            name="group_ids"
            eval="[(6,0,[ref('odoo_configuration_change_record_validator_group')])]"
        />
    <field name="restrict_additional" eval="1" />
    <field name="additional_python_code">result = False
if not document.approval_template_id:
    result = True</field>
</record>

