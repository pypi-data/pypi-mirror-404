<odoo>
<!-- Header -->
<record id="policy_template_odoo_change_request" model="policy.template">
    <field name="name">Standard</field>
    <field name="model_id" ref="model_odoo_change_request" />
    <field
            name="state_field_id"
            search="[('model_id.model','=','odoo_change_request'),('name','=','state')]"
        />
    <field name="sequence" eval="100" />
    <field name="python_code">result=True</field>
</record>

<!-- Confirm -->
<record id="policy_template_odoo_change_request_confirm" model="policy.template_detail">
    <field name="template_id" ref="policy_template_odoo_change_request" />
    <field
            name="field_id"
            search="[('model_id.model','=','odoo_change_request'),('name','=','confirm_ok')]"
        />
    <field name="restrict_state" eval="1" />
    <field
            name="state_ids"
            search="[('field_id.model_id.model','=','odoo_change_request'),('value','=','draft')]"
        />
    <field name="restrict_user" eval="1" />
    <field name="computation_method">use_group</field>
    <field name="group_ids" eval="[(6,0,[ref('odoo_change_request_user_group')])]" />
    <field name="restrict_additional" eval="0" />
</record>

