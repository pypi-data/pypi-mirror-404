<odoo>
<record id="odoo_change_request_view_search" model="ir.ui.view">
    <field name="name">odoo_change_request - search</field>
    <field name="model">odoo_change_request</field>
    <field name="mode">primary</field>
    <field
            name="inherit_id"
            ref="ssi_transaction_mixin.mixin_transaction_view_search"
        />
    <field name="arch" type="xml">
        <data>
            <xpath expr="//field[@name='user_id']" position="after">
                <field name="feature_id" />
            </xpath>
            <xpath expr="//group[@name='group_by']" position="inside">
                <filter
                        name="grp_feature"
                        string="Feature"
                        context="{'group_by':'feature_id'}"
                    />
            </xpath>
        </data>
    </field>
</record>

<record id="odoo_change_request_view_tree" model="ir.ui.view">
    <field name="name">odoo_change_request - tree</field>
    <field name="model">odoo_change_request</field>
    <field name="mode">primary</field>
    <field name="inherit_id" ref="ssi_transaction_mixin.mixin_transaction_view_tree" />
    <field name="arch" type="xml">
        <data>
            <xpath expr="//field[@name='company_id']" position="after">
                <field name="date" optional="hide" />
                <field name="summary" />
                <field name="feature_id" />
                <field name="version_id" />
            </xpath>
        </data>
    </field>
</record>

<record id="odoo_change_request_view_form" model="ir.ui.view">
    <field name="name">odoo_change_request - form</field>
    <field name="model">odoo_change_request</field>
    <field name="mode">primary</field>
    <field name="inherit_id" ref="ssi_transaction_mixin.mixin_transaction_view_form" />
    <field name="arch" type="xml">
        <data>
            <xpath expr="//field[@name='user_id']" position="after">
                <field name="feature_id" />
                <field name="version_id" />
            </xpath>
            <xpath expr="//group[@name='header_right']" position="inside">
                <field name="date" />
            </xpath>
            <xpath expr="//group[@name='header_center']" position="inside">
                <label for="summary" colspan="2" />
                <field name="summary" nolabel="1" colspan="2" />
            </xpath>
            <xpath expr="//page[1]" position="before">
                <page name="objective" string="Objective">
                    <field
                            name="objective"
                            nolabel="1"
                            widget="ckeditor"
                            class="oe_full_width"
                        />
                </page>
                <page name="solution" string="Solution">
                    <field
                            name="solution_description"
                            widget="ckeditor"
                            nolabel="1"
                            class="oe_full_width"
                        />
                </page>
                <page name="modules" string="Impacted Modules">
                    <field name="module_ids" />
                </page>
            </xpath>
        </data>
    </field>
</record>

<record id="odoo_change_request_action" model="ir.actions.act_window">
    <field name="name">Odoo Change Requests</field>
    <field name="res_model">odoo_change_request</field>
    <field name="search_view_id" ref="odoo_change_request_view_search" />
    <field name="view_mode">tree,form</field>
    <field
            name="context"
        >{'search_default_dom_draft':1,'search_default_dom_open':1, 'search_default_dom_confirm':1, 'search_default_dom_ready':1}</field>
</record>

<menuitem
        id="odoo_change_request_menu"
        name="Change Requests"
        parent="menu_root_odoo"
        action="odoo_change_request_action"
        groups="odoo_change_request_viewer_group"
        sequence="50"
    />
</odoo>
