<odoo>
<record id="odoo_feature_issue_view_search" model="ir.ui.view">
    <field name="name">odoo_feature_issue - search</field>
    <field name="model">odoo_feature_issue</field>
    <field name="mode">primary</field>
    <field
            name="inherit_id"
            ref="ssi_transaction_mixin.mixin_transaction_view_search"
        />
    <field name="arch" type="xml">
        <data>
            <xpath expr="//field[@name='user_id']" position="after">
                <field name="feature_id" />
            </xpath>
            <xpath expr="//group[@name='group_by']" position="inside">
                <filter
                        name="grp_feature"
                        string="Feature"
                        context="{'group_by':'feature_id'}"
                    />
            </xpath>
        </data>
    </field>
</record>

<record id="odoo_feature_issue_view_tree" model="ir.ui.view">
    <field name="name">odoo_feature_issue - tree</field>
    <field name="model">odoo_feature_issue</field>
    <field name="mode">primary</field>
    <field name="inherit_id" ref="ssi_transaction_mixin.mixin_transaction_view_tree" />
    <field name="arch" type="xml">
        <data>
            <xpath expr="//field[@name='company_id']" position="after">
                <field name="date" optional="hide" />
                <field name="summary" />
                <field name="feature_id" />
                <field name="version_id" />
            </xpath>
        </data>
    </field>
</record>

<record id="odoo_feature_issue_view_form" model="ir.ui.view">
    <field name="name">odoo_feature_issue - form</field>
    <field name="model">odoo_feature_issue</field>
    <field name="mode">primary</field>
    <field name="inherit_id" ref="ssi_transaction_mixin.mixin_transaction_view_form" />
    <field name="arch" type="xml">
        <data>
            <xpath expr="//field[@name='user_id']" position="after">
                <field name="feature_id" />
                <field name="version_id" />
            </xpath>
            <xpath expr="//group[@name='header_right']" position="inside">
                <field name="date" />
            </xpath>
            <xpath expr="//group[@name='header_center']" position="inside">
                <label for="summary" colspan="2" />
                <field name="summary" nolabel="1" colspan="2" />
            </xpath>
            <xpath expr="//page[1]" position="before">
                <page name="description" string="Description">
                    <separator string="Precondition" colspan="4" />
                    <field name="precondition" widget="ckeditor" />
                    <separator string="Steps to Reproduce" colspan="4" />
                    <field name="steps_to_reproduce" widget="ckeditor" />
                    <separator string="Current Behaviour" colspan="4" />
                    <field name="current_behavior" widget="ckeditor" />
                    <separator string="Expected Behaviour" colspan="4" />
                    <field name="expected_behavior" widget="ckeditor" />
                </page>
                <page name="log" string="Error Log">
                    <field name="error_log" widget="ace" />
                </page>
                <page name="use_case" string="Related Use Case">
                    <field name="use_case_ids">
                    </field>
                </page>
                <page name="module" string="Related Module">
                    <field name="module_ids">
                    </field>
                </page>
            </xpath>
        </data>
    </field>
</record>

<record id="odoo_feature_issue_action" model="ir.actions.act_window">
    <field name="name">Odoo Feature Issues</field>
    <field name="res_model">odoo_feature_issue</field>
    <field name="search_view_id" ref="odoo_feature_issue_view_search" />
    <field name="view_mode">tree,form</field>
    <field
            name="context"
        >{'search_default_dom_draft':1,'search_default_dom_open':1, 'search_default_dom_confirm':1, 'search_default_dom_ready':1}</field>
</record>

<menuitem
        id="odoo_feature_issue_menu"
        name="Feature Issues"
        parent="menu_root_odoo"
        action="odoo_feature_issue_action"
        groups="odoo_feature_issue_viewer_group"
        sequence="20"
    />
</odoo>
