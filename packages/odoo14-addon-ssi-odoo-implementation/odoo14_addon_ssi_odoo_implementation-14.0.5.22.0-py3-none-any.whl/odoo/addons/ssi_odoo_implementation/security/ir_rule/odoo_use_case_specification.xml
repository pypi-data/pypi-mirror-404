<?xml version='1.0' encoding='utf-8' ?>
<odoo>
<record id="odoo_use_case_specification_internal_user_rule" model="ir.rule">
    <field name="name">Odoo Use Case Specification - Internal Users</field>
    <field name="model_id" ref="model_odoo_use_case_specification" />
    <field name="groups" eval="[(4, ref('base.group_user'))]" />
    <field name="domain_force">[
    ('user_id','=',user.id),
]</field>
    <field name="perm_unlink" eval="1" />
    <field name="perm_write" eval="1" />
    <field name="perm_read" eval="1" />
    <field name="perm_create" eval="1" />
</record>
<record id="odoo_use_case_specification_company_rule" model="ir.rule">
    <field name="name">Odoo Use Case Specification - Responsible to company data</field>
    <field name="model_id" ref="model_odoo_use_case_specification" />
    <field
            name="groups"
            eval="[(4, ref('odoo_use_case_specification_company_group'))]"
        />
    <field name="domain_force">[('company_id','=',user.company_id.id)]</field>
    <field name="perm_unlink" eval="1" />
    <field name="perm_write" eval="1" />
    <field name="perm_read" eval="1" />
    <field name="perm_create" eval="1" />
</record>
<record id="odoo_use_case_specification_companies_rule" model="ir.rule">
    <field
            name="name"
        >Odoo Use Case Specification - Responsible to company and all child companies data</field>
    <field name="model_id" ref="model_odoo_use_case_specification" />
    <field
            name="groups"
            eval="[(4, ref('odoo_use_case_specification_company_child_group'))]"
        />
    <field name="domain_force">[('company_id','in',user.company_ids.ids)]</field>
    <field name="perm_unlink" eval="1" />
    <field name="perm_write" eval="1" />
    <field name="perm_read" eval="1" />
    <field name="perm_create" eval="1" />
</record>
<record id="odoo_use_case_specification_all_rule" model="ir.rule">
    <field name="name">Odoo Use Case Specification - All</field>
    <field name="model_id" ref="model_odoo_use_case_specification" />
    <field name="groups" eval="[(4, ref('odoo_use_case_specification_all_group'))]" />
    <field name="domain_force">[(1,'=',1)]</field>
    <field name="perm_unlink" eval="1" />
    <field name="perm_write" eval="1" />
    <field name="perm_read" eval="1" />
    <field name="perm_create" eval="1" />
</record>
</odoo>
