<odoo>
<record id="approval_template_odoo_use_case_specification" model="approval.template">
    <field name="name">Standard</field>
    <field name="model_id" ref="model_odoo_use_case_specification" />
    <field name="sequence" eval="100" />
    <field name="computation_method">use_python</field>
    <field name="python_code">result = True</field>
    <field name="validate_sequence" eval="1" />
</record>

<record
        id="approval_template_odoo_use_case_specification_detail"
        model="approval.template_detail"
    >
    <field name="template_id" ref="approval_template_odoo_use_case_specification" />
    <field name="approver_selection_method">use_group</field>
    <field
            name="approver_group_ids"
            eval="[(6,0,[ref('odoo_use_case_specification_validator_group')])]"
        />
</record>
</odoo>
