        "command": "uv build --out-dir dist",
        "cwd": "projects/summary-stack/backend/connectors/obsidian/summary_stack_obsidian_mcp_server"
      },
      "cache": true
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "uv run pytest tests/ || [ $? = 5 ] && true",
        "cwd": "projects/summary-stack/backend/connectors/obsidian/summary_stack_obsidian_mcp_server"
      },
      "cache": true
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "uv run ruff check .",
        "cwd": "projects/summary-stack/backend/connectors/obsidian/summary_stack_obsidian_mcp_server"
      },
      "cache": true
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "uv run mypy .",
        "cwd": "projects/summary-stack/backend/connectors/obsidian/summary_stack_obsidian_mcp_server"
      },
      "cache": true
    },
    "format": {
      "executor": "nx:run-commands",
      "options": {
        "command": "uv run ruff check --fix . && uv run ruff format .",
        "cwd": "projects/summary-stack/backend/connectors/obsidian/summary_stack_obsidian_mcp_server"
      }
    },
    "format:check": {
      "executor": "nx:run-commands",
      "options": {
        "command": "uv run ruff check . && uv run ruff format --check .",
        "cwd": "projects/summary-stack/backend/connectors/obsidian/summary_stack_obsidian_mcp_server"
      },
      "cache": true
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "uv run python -m summary_stack_obsidian_mcp_server",
        "cwd": "projects/summary-stack/backend/connectors/obsidian/summary_stack_obsidian_mcp_server"
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "options": {
        "command": "uv publish dist/*",
        "cwd": "projects/summary-stack/backend/connectors/obsidian/summary_stack_obsidian_mcp_server"
      }
    },
    "inspect": {
      "executor": "nx:run-commands",
      "options": {
        "command": "bash -c 'set -a && source .env.local && set +a && npx @modelcontextprotocol/inspector uv run python -m summary_stack_obsidian_mcp_server'",
        "cwd": "projects/summary-stack/backend/connectors/obsidian/summary_stack_obsidian_mcp_server"
      }
    }
