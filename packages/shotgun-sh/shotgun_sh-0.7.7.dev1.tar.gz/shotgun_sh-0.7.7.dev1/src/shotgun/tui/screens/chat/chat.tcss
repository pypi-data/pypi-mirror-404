#footer {
  dock: bottom;
  height: auto;
  padding: 1 1 1 2;
  max-height: 24;
}

#window {
  align: left bottom;
}

.hidden {
  display: none;
}

#footer > Grid {
  height: auto;
  grid-columns: 1fr auto;
  grid-size: 2;
}


#right-footer-indicators {
  width: auto;
  height: auto;
  layout: vertical;
}

#update-indicator {
  text-align: end;
  height: 1;
}

#context-indicator {
  text-align: end;
  height: 1;
}

#indexing-job-display {
  text-align: end;
}

AttachmentBar {
  height: auto;
  padding: 0 1;
  background: $secondary-background;
  margin-bottom: 1;
}

AttachmentBar.hidden {
  display: none;
}

AttachmentBar Static {
  color: $text-accent;
}