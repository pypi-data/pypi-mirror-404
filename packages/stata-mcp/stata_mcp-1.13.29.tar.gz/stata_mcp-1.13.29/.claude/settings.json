    "deny": [
      "Bash(git push --force)",
      "Bash(echo $:*TOKEN:*)",
      "Bash(echo $:*API_KEY:*)",
      "Bash(cat .env)",
      "Read(.env)",
      "Read(~/.zshrc)",
      "Read(~/.bashrc)",
      "Read(~/.profile)",
      "Read(~/.zprofile)"
    ]
  },
  "enabledMcpjsonServers": [
    "context7",
    "github"
  ],
  "enableAllProjectMcpServers": true
}
