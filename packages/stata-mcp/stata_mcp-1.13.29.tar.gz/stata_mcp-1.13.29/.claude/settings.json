{
  "permissions": {
    "allow": [
      "Bash(uvx:*)",
      "Bash(uv run:*)",
      "Bash(uv add:*)",
      "Bash(uv remove:*)",
      "Bash(uv sync:*)",
      "Bash(uv build:*)",
      "Bash(uv pip:*)",
      "Bash(git pull:*)",
      "Bash(git push:*)",
      "Bash(git log:*)",
      "Bash(git diff:*)",
      "Bash(git status:*)",
      "Bash(find:*)",
      "Bash(python:*)",
      "Bash(python3:*)",
      "Bash(mcp dev main.py)",
      "Bash(npx @modelcontextprotocol/inspector uv run main.py)",
      "WebFetch(domain:*.modelcontextprotocol.io)",
      "WebFetch(domain:*.stata.com)",
      "WebFetch(domain:*.statamcp.com)",
      "WebFetch(domain:*.nber.com)",
      "WebFetch(domain:*.ssrn.com)",
      "mcp__context7__resolve-library-id",
      "mcp__context7__query-docs",
      "mcp__github__list_issues",
      "mcp__github__issue_read",
      "mcp__github__search_issues",
      "mcp__github__list_pull_requests",
      "mcp__github__pull_request_read",
      "mcp__github__search_pull_requests",
      "mcp__github__get_file_contents"
