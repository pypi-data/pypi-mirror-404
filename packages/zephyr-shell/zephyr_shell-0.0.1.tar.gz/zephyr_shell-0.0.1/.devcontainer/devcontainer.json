{
  "name": "zephyr-shell",
  "dockerFile": "Dockerfile",
  "runArgs": ["--env-file", ".devcontainer/devcontainer.env"],
  "customizations": {
    "vscode": {
      "settings": {
        "[python]": {
          "editor.tabSize": 4,
          "editor.insertSpaces": true,
          "editor.formatOnSave": true,
          "editor.defaultFormatter": "charliermarsh.ruff",
          "testing.unittestEnabled": false,
          "testing.pytestEnabled": true,
          "testing.pytestArgs": ["tests"],
          "defaultInterpreterPath": "./venv/bin/python"
        },
        "files.exclude": {
          "**/.git": true,
          "**/.svn": true,
          "**/.hg": true,
          "**/CVS": true,
          "**/.DS_Store": true,
          "**/__pycache__": true,
          "**/.mypy_cache": true,
          "**/.pytest_cache": true,
          "**/.ruff_cache": true
        },
        "terminal.integrated.fontFamily": "Consolas, monospace",
        "terminal.integrated.defaultProfile.linux": "zsh",
        "terminal.integrated.profiles.linux": {
          "bash": {
            "path": "bash",
            "icon": "terminal-bash"
          },
          "zsh": {
            "path": "zsh"
          },
          "fish": {
            "path": "fish"
          },
          "tmux": {
            "path": "tmux",
            "icon": "terminal-tmux"
          },
          "pwsh": {
            "path": "pwsh",
            "icon": "terminal-powershell"
          }
        }
      },
      "extensions": [
        "ms-python.python",
        "charliermarsh.ruff",
        "ms-python.vscode-pylance",
        "ms-toolsai.jupyter",
        "ms-python.mypy-type-checker",
        "github.vscode-github-actions"
      ]
    }
  },
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installOhMyZshConfig": false,
      "configureZshAsDefaultShell": true
    },
    // Node
    "ghcr.io/devcontainers/features/node:1": {
      "version": "lts",
      "installYarnUsingApt": true
    },
    // TypeScript
    "ghcr.io/devcontainers-extra/features/typescript:2": {},
    // ts-node
    "ghcr.io/devcontainers-extra/features/ts-node:1": {},
    // Modern shell utils
    "ghcr.io/mikaello/devcontainer-features/modern-shell-utils:2.0.0": {},
    // uv
    "ghcr.io/jsburckhardt/devcontainer-features/uv:1": {},
    // docker-in-docker
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "moby": false
    }
  },
  "mounts": [
    "source=devcontainer-zshhistory,target=/commandhistory,type=volume"
  ],
  "postCreateCommand": "bash scripts/post-create.sh"
}
