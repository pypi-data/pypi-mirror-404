{
  "protocol_name": "post_operative_monitoring",
  "protocol_version": "2024.1",
  "applies_to": ["post_surgical_patients"],
  "description": "Standard post-operative monitoring and complication screening",

  "screening_criteria": {
    "description": "Early warning signs of post-op complications",
    "criteria": [
      {
        "parameter": "temp_f",
        "condition": ">=",
        "value": 101.0,
        "points": 1,
        "description": "Fever suggesting infection"
      },
      {
        "parameter": "hr",
        "condition": ">=",
        "value": 110,
        "points": 1,
        "description": "Tachycardia"
      },
      {
        "parameter": "systolic_bp",
        "condition": "<=",
        "value": 90,
        "points": 1,
        "description": "Hypotension"
      },
      {
        "parameter": "o2_sat",
        "condition": "<=",
        "value": 92,
        "points": 1,
        "description": "Hypoxemia"
      }
    ],
    "threshold": 2
  },

  "interventions": [
    {
      "order": 1,
      "action": "assess_surgical_site",
      "timing": "immediately",
      "required": true
    },
    {
      "order": 2,
      "action": "check_pain_control",
      "timing": "within_15_minutes",
      "required": true
    },
    {
      "order": 3,
      "action": "review_intake_output",
      "timing": "within_30_minutes",
      "required": true
    },
    {
      "order": 4,
      "action": "notify_surgeon",
      "timing": "within_1_hour",
      "required": true
    }
  ],

  "monitoring_requirements": {
    "vitals_frequency": "every_4_hours",
    "reassessment": "every_shift",
    "continuous_monitoring": ["O2_sat"]
  },

  "escalation_criteria": {
    "if": [
      "temp_>102F",
      "o2_sat_<90",
      "systolic_bp_<85",
      "altered_mental_status"
    ],
    "then": "notify_surgeon_stat"
  },

  "documentation_requirements": [
    "time_criteria_met",
    "surgical_site_assessment",
    "pain_score",
    "intake_output_totals",
    "surgeon_notification"
  ]
}
