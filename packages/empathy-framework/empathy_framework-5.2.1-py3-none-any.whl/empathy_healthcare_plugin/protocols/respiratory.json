{
  "protocol_name": "respiratory_monitoring",
  "protocol_version": "2024.1",
  "applies_to": ["respiratory_failure", "copd", "asthma", "pneumonia"],
  "description": "Respiratory monitoring and intervention protocol",

  "screening_criteria": {
    "description": "Signs of respiratory distress",
    "criteria": [
      {
        "parameter": "respiratory_rate",
        "condition": ">=",
        "value": 28,
        "points": 1,
        "description": "Severe tachypnea"
      },
      {
        "parameter": "o2_sat",
        "condition": "<=",
        "value": 90,
        "points": 1,
        "description": "Hypoxemia"
      },
      {
        "parameter": "hr",
        "condition": ">=",
        "value": 115,
        "points": 1,
        "description": "Tachycardia from hypoxia"
      }
    ],
    "threshold": 2
  },

  "interventions": [
    {
      "order": 1,
      "action": "administer_supplemental_oxygen",
      "timing": "immediately",
      "required": true,
      "parameters": {"titrate_to": "SpO2_>92%"}
    },
    {
      "order": 2,
      "action": "assess_airway_breathing",
      "timing": "immediately",
      "required": true
    },
    {
      "order": 3,
      "action": "obtain_abg",
      "timing": "within_30_minutes",
      "required": true
    },
    {
      "order": 4,
      "action": "notify_respiratory_therapy",
      "timing": "within_15_minutes",
      "required": true
    },
    {
      "order": 5,
      "action": "consider_noninvasive_ventilation",
      "timing": "if_no_improvement",
      "required": false
    }
  ],

  "monitoring_requirements": {
    "vitals_frequency": "continuous",
    "reassessment": "every_15_minutes",
    "continuous_monitoring": ["O2_sat", "RR", "HR"]
  },

  "escalation_criteria": {
    "if": [
      "o2_sat_<88_despite_oxygen",
      "respiratory_rate_>30",
      "altered_mental_status",
      "unable_to_speak_full_sentences"
    ],
    "then": "activate_rapid_response"
  },

  "documentation_requirements": [
    "oxygen_delivery_method",
    "oxygen_flow_rate",
    "abg_results",
    "respiratory_assessment",
    "response_to_treatment"
  ]
}
