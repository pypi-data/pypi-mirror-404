{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Phenopacket Schema (Core Subset)",
  "type": "object",
  "required": [
    "id",
    "subject",
    "phenotypicFeatures",
    "metaData"
  ],
  "properties": {
    "id": {
      "type": "string",
      "description": "An identifier for this phenopacket."
    },
    "subject": {
      "type": "object",
      "required": [
        "id",
        "sex",
        "taxonomy"
      ],
      "properties": {
        "id": {
          "type": "string"
        },
        "sex": {
          "type": "string",
          "enum": [
            "UNKNOWN_SEX",
            "FEMALE",
            "MALE",
            "OTHER_SEX"
          ]
        },
        "taxonomy": {
          "type": "object",
          "required": [
            "id"
          ],
          "properties": {
            "id": {
              "type": "string"
            },
            "label": {
              "type": "string"
            }
          }
        },
        "timeAtLastEncounter": {
          "type": "object",
          "properties": {
            "age": {
              "type": "object",
              "properties": {
                "iso8601duration": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "phenotypicFeatures": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "type"
        ],
        "properties": {
          "type": {
            "type": "object",
            "required": [
              "id",
              "label"
            ],
            "properties": {
              "id": {
                "type": "string"
              },
              "label": {
                "type": "string"
              }
            }
          },
          "excluded": {
            "type": "boolean"
          }
        }
      }
    },
    "metaData": {
      "type": "object",
      "required": [
        "created",
        "phenopacketSchemaVersion",
        "resources"
      ],
      "properties": {
        "created": {
          "type": "string",
          "format": "date-time"
        },
        "createdBy": {
          "type": "string"
        },
        "phenopacketSchemaVersion": {
          "type": "string"
        },
        "resources": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "id",
              "name",
              "url",
              "version",
              "namespacePrefix",
              "iriPrefix"
            ],
            "properties": {
              "id": {
                "type": "string"
              },
              "name": {
                "type": "string"
              },
              "url": {
                "type": "string"
              },
              "version": {
                "type": "string"
              },
              "namespacePrefix": {
                "type": "string"
              },
              "iriPrefix": {
                "type": "string"
              }
            }
          }
        }
      }
    }
  }
}