<odoo>


<record id="res_config_settings_view_form" model="ir.ui.view">
    <field name="model">res.config.settings</field>
    <field name="inherit_id" ref="account.res_config_settings_view_form" />
    <field name="arch" type="xml">
        <xpath expr="//div[@name='default_taxes_setting_container']" position="after">
            <h2>France VAT</h2>
            <div class="row mt16 o_settings_container" id="fr_vat">
                <div class="col-xs-12 col-md-12 o_setting_box">
                    <div class="o_setting_left_pane" />
                    <div class="o_setting_right_pane">
                        <div class="row" id="fr_vat_exigibility">
                            <label for="fr_vat_exigibility" class="col-md-3" />
                            <field name="fr_vat_exigibility" class="col-md-3" />
                            <button
                                    type="action"
                                    name="%(l10n_fr_vat_exigibility_update_action)d"
                                    string="Change VAT Exigibility"
                                    context="{'default_company_id': company_id}"
                                    class="oe_link"
                                    icon="fa-exchange"
                                />
                        </div>
                        <div class="row" id="fr_vat_periodicity">
                            <label for="fr_vat_periodicity" class="col-md-3" />
                            <field name="fr_vat_periodicity" />
                    </div>
                        <div class="row" id="fr_vat_bank_account_id">
                            <label for="fr_vat_bank_account_id" class="col-md-3" />
                            <field name="fr_vat_bank_account_id" />
                            <field name="fr_vat_company_partner_id" invisible="1" />
                        </div>
                        <div class="row" id="fr_vat_journal_id">
                            <label for="fr_vat_journal_id" class="col-md-3" />
                            <field name="fr_vat_journal_id" />
                    </div>
                    <div class="row" id="l10n_fr_rounding_difference_loss_account_id">
                            <label
                                    for="l10n_fr_rounding_difference_loss_account_id"
                                    class="col-md-3"
                                />
                            <field name="l10n_fr_rounding_difference_loss_account_id" />
                    </div>
                    <div class="row" id="l10n_fr_rounding_difference_profit_account_id">
                            <label
                                    for="l10n_fr_rounding_difference_profit_account_id"
                                    class="col-md-3"
                                />
                            <field
                                    name="l10n_fr_rounding_difference_profit_account_id"
                                />
                    </div>
                        <div
                                class="row"
                                id="fr_vat_expense_analytic_distribution"
                                groups="analytic.group_analytic_accounting"
                            >
                            <label
                                    for="fr_vat_expense_analytic_distribution"
                                    class="col-md-3"
                                />
                            <field
                                    name="fr_vat_expense_analytic_distribution"
                                    widget="analytic_distribution"
                                    options="{'business_domain': 'general'}"
                                />
                        </div>
                        <div
                                class="row"
                                id="fr_vat_income_analytic_distribution"
                                groups="analytic.group_analytic_accounting"
                            >
                            <label
                                    for="fr_vat_income_analytic_distribution"
                                    class="col-md-3"
                                />
                            <field
                                    name="fr_vat_income_analytic_distribution"
                                    widget="analytic_distribution"
                                    options="{'business_domain': 'general'}"
                                />
                    </div>

                    <div
                                class="row"
                                id="fr_vat_send_gateway"
                                attrs="{'invisible': [('fr_vat_periodicity', 'not in', ('1', '3'))]}"
                            >
                            <label
                                    for="fr_vat_send_gateway"
                                    class="col-md-3"
                                    string="Default VAT Gateway"
                                />
                            <field name="fr_vat_send_gateway" />
                    </div>
                        <div
                                class="row"
                                id="fr_vat_remind_user_ids"
                                attrs="{'invisible': [('fr_vat_periodicity', 'not in', ('1', '3'))]}"
                            >
                            <label
                                    for="fr_vat_remind_user_ids"
                                    class="col-md-3"
                                    string="Users to Remind"
                                />
                            <field
                                    name="fr_vat_remind_user_ids"
                                    widget="many2many_tags"
                                />
                        </div>
                        <div
                                class="row"
                                id="fr_vat_remind_deadline_day"
                                attrs="{'invisible': [('fr_vat_periodicity', 'not in', ('1', '3'))]}"
                            >
                            <label
                                    for="fr_vat_remind_deadline_day"
                                    class="col-md-3"
                                    string="Deadline Day"
                                />
                            <field name="fr_vat_remind_deadline_day" />
                        </div>
                    </div>
            </div>
                <div
                        class="col-xs-12 col-md-12 o_setting_box"
                        attrs="{'invisible': [('fr_vat_periodicity', 'not in', ('1', '3'))]}"
                    >
                    <div class="o_setting_left_pane">
                        <div class="row">
                            <field name="fr_vat_remind_auto_generate_and_transmit" />
                        </div>
                    </div>
                    <div class="o_setting_right_pane">
                        <div class="row">
                            <label
                                    for="fr_vat_remind_auto_generate_and_transmit"
                                    class="col-md-5"
                                />
                        </div>
                    </div>
            </div>
            <div
                        class="col-xs-12 col-md-12 o_setting_box"
                        id="fr_vat_manual_autoliq_line_default_option"
                    >
            <div class="o_setting_left_pane" />
            <div class="o_setting_right_pane">
                                    <span
                                class="o_form_label"
                            >Default for Autoliquidation Lines</span>
                                    <span class="fa fa-lg fa-building-o" role="img" />
                                    <div class="text-muted">
                                    This is the default option for unreconciled VAT autoliquidation journal items for which Odoo cannot compute the option automatically (usually correspond to journal items that are not in the purchase journal). This option is required only when the option 'Auto-generate and Transmit on Deadline Day' is enabled.
                                    </div>
                                    <div class="text-muted">
                            <field
                                    name="fr_vat_manual_autoliq_line_default_option"
                                    attrs="{'required': [('fr_vat_remind_auto_generate_and_transmit', '=', True)]}"
                                />
                    </div>
            </div>
                    </div>

                <div class="col-xs-12 col-md-12 o_setting_box">
                    <div class="o_setting_left_pane">
                        <div class="row">
                            <field name="fr_vat_update_lock_dates" />
                        </div>
                    </div>
                    <div class="o_setting_right_pane">
                        <div class="row">
                            <label for="fr_vat_update_lock_dates" class="col-md-5" />
                        </div>
                    </div>
                </div>
            </div>
        </xpath>
    </field>
</record>


</odoo>
