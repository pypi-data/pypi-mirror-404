{
  "name": "@invar/eslint-plugin",
  "version": "0.1.1",
  "description": "ESLint plugin with Invar-specific rules for TypeScript",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc && pnpm bundle",
    "bundle": "esbuild dist/cli.js --bundle --platform=node --format=cjs --outfile=dist/bundle.js --external:typescript --external:eslint --external:@typescript-eslint/parser --external:espree",
    "test": "vitest run",
    "prepublishOnly": "pnpm build"
  },
  "keywords": [
    "invar",
    "eslint",
    "eslint-plugin",
    "typescript",
    "contracts",
    "zod"
  ],
  "author": "Invar Team",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/invar-labs/invar.git",
    "directory": "typescript/packages/eslint-plugin"
  },
  "dependencies": {
    "eslint": "^8.57.0",
    "@typescript-eslint/parser": "^6.21.0",
    "espree": "^9.6.1"
  },
  "devDependencies": {
    "esbuild": "^0.19.0"
  },
  "peerDependencies": {
    "eslint": ">=8.0.0",
    "@typescript-eslint/parser": ">=6.0.0",
    "typescript": ">=4.7.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
