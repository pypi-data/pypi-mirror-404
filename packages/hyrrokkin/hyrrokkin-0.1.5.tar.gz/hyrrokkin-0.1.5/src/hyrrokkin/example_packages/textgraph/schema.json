{
    "id": "textgraph",
    "metadata": {
        "name": "{{package_name}}",
        "description": "{{package_description}}",
        "version": "0.5.0",
        "license": "MIT",
        "link": "html/about.html"
    },
    "configuration": {
        "pages": {
            "settings": {
                "label": "{{configure}}",
                "title": "{{textgraph_configuration}}",
                "url": "html/textgraph_configuration.html"
            }
        }
    },
    "l10n": {
        "languages": {
            "en": {
                "name": "English",
                "bundle_url": "l10n/en.json"
            },
            "de": {
                "name": "Deutsch",
                "bundle_url": "l10n/de.json"
            }
        },
        "default_language": "en"
    },
    "node_types": {
        "text_input_node": {
            "metadata": {
                "name": "{{text_input}}",
                "description": "{{text_input_description}}"
            },
            "display": {
                "corners": 0,
                "icon": "icons/text_input_node.svg"
            },
            "pages": {
                "settings": {
                    "label":"{{open}}...",
                    "title": "{{text_input}}",
                    "url": "html/text_input_node.html",
                    "window_width": 500,
                    "window_height": 300
                }
            },
            "output_ports": {
                "data_out": {
                    "metadata": {
                      "name": "Text Output",
                      "description": "Output the text document stored in this node"
                    },
                    "link_type": "textgraph:text",
                    "allow_multiple_connections": true
                }
            }
        },
        "word_frequency_node": {
           "metadata": {
                "name": "{{word_frequency}}",
                "description": "{{word_frequency_description}}"
            },
            "display": {
                "corners": 8,
                "icon": "icons/word_frequency_node.svg"
            },
            "pages": {
                "settings": {
                    "label":"{{open}}...",
                    "title": "{{word_frequency}}",
                    "url": "html/word_frequency_node.html",
                    "window_width": 500,
                    "window_height": 300
                }
            },
            "input_ports": {
                "data_in": {
                    "metadata": {
                      "name": "Text Input",
                      "description": "Input a text document to be analysed"
                    },
                    "link_type": "textgraph:text",
                    "allow_multiple_connections": false
                }
            },
            "output_ports": {
                "data_out": {
                    "metadata": {
                      "name": "Word Frequencies Output",
                      "description": "Output a word frequency table derived from the input text"
                    },
                    "link_type": "textgraph:frequency_table",
                    "allow_multiple_connections": true
                }
            }
        },
        "merge_text_node": {
            "metadata": {
                "name": "{{merge_text}}",
                "description": "{{merge_text_description}}"
            },
            "display": {
                "corners": 8,
                "icon": "icons/merge_text_node.svg"
            },
            "input_ports": {
                "data_in": {
                    "metadata": {
                       "name": "Text Inputs",
                       "description": "Accept multiple text document inputs to be merged into one"
                    },
                    "link_type": "textgraph:text",
                    "allow_multiple_connections": true
                }
            },
            "output_ports": {
                "data_out": {
                    "metadata": {
                       "name": "Text Output",
                       "description": "Output the text document formed by merging input documents"
                    },
                    "link_type": "textgraph:text",
                    "allow_multiple_connections": true
                }
            }
        },
        "merge_frequencies_node": {
            "metadata": {
                "name": "{{merge_frequencies}}",
                "description": "{{merge_frequencies_description}}"
            },
            "display": {
                "corners": 8,
                "icon": "icons/merge_frequencies_node.svg"
            },
            "pages": {
                "settings": {
                    "label":"{{open}}...",
                    "title": "{{merge_frequencies}}",
                    "url": "html/merge_frequencies_node.html",
                    "window_width": 500,
                    "window_height": 300
                }
            },
            "input_ports": {
                "data_in0": {
                    "metadata": {
                       "name": "Word Frequency Input 1",
                       "description": "Input the first word frequency table to merge"
                    },
                    "link_type": "textgraph:frequency_table",
                    "allow_multiple_connections": false
                },
                "data_in1": {
                    "metadata": {
                       "name": "Word Frequency Input 2",
                       "description": "Input the second word frequency table to merge"
                    },
                    "link_type": "textgraph:frequency_table",
                    "allow_multiple_connections": false
                }
            },
            "output_ports": {
                "data_out": {
                    "metadata": {
                       "name": "Word Frequency Output",
                       "description": "Output the merged word frequency table"
                    },
                    "link_type": "textgraph:frequency_table",
                    "allow_multiple_connections": true
                }
            }
        },
        "table_display_node": {
            "metadata": {
                "name": "{{table_display}}",
                "description": "{{table_display_description}}"
            },
            "display": {
                "corners": 8,
                "icon": "icons/table_display_node.svg"
            },
            "pages": {
                "results": {
                    "label":"{{open}}...",
                    "title": "{{table_display}}",
                    "url": "html/table_display_node.html",
                    "window_width": 500,
                    "window_height": 300
                }
            },
            "input_ports": {
                "data_in": {
                    "metadata": {
                       "name": "Word Frequency Input",
                       "description": "Input a word frequency table to display"
                    },
                    "link_type": "textgraph:frequency_table",
                    "allow_multiple_connections": false
                }
            }
        }
    },
    "link_types": {
        "text": {
            "metadata": {
                "name": "{{link_type_text}}",
                "description": "{{link_type_text_description}}"
            },
            "display": {
                "colour": "orange"
            }
        },
        "frequency_table": {
            "metadata": {
                "name": "{{link_type_table}}",
                "description": "{{link_type_table_description}}"
            },
            "display": {
                "colour": "purple"
            }
        }
    }
}