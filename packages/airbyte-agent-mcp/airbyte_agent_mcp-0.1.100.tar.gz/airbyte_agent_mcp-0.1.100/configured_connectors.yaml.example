# Example connector configuration
# Copy to configured_connectors.yaml and customize

# Connector definitions
# LOCAL connectors can be loaded from:
# - A local file path (path field) - no version pinning supported
# - The Airbyte registry (connector_name field) - supports optional version pinning
connectors:
  # LOCAL connector with file path
  - id: my_api
    type: local
    path: ./connectors/my-api/connector.yaml
    description: "My custom API connector"
    secrets:
      token: MY_API_KEY

  # LOCAL connector from registry (latest version)
  - id: stripe
    type: local
    connector_name: stripe
    description: "Stripe connector from registry"
    secrets:
      token: STRIPE_API_KEY

  # LOCAL connector from registry with version pinning
  - id: salesforce
    type: local
    connector_name: salesforce
    version: 1.2.0
    description: "Salesforce connector pinned to v1.2.0"
    secrets:
      client_id: SALESFORCE_CLIENT_ID
      client_secret: SALESFORCE_CLIENT_SECRET

  # MULTI-AUTH connector with explicit auth_scheme selection
  # Use this for connectors that support multiple authentication methods
  - id: zendesk-oauth
    type: local
    path: ../integrations/zendesk-support/connector.yaml
    description: "Zendesk with OAuth2 authentication"
    auth_scheme: zendeskOAuth  # Explicitly select OAuth scheme
    config_values:
      subdomain: YOUR_SUBDOMAIN  # Non-secret config value
    secrets:
      access_token: ZENDESK_ACCESS_TOKEN
      refresh_token: ZENDESK_REFRESH_TOKEN

  - id: zendesk-api-token
    type: local
    path: ../integrations/zendesk-support/connector.yaml
    description: "Zendesk with API Token authentication"
    auth_scheme: zendeskAPIToken  # Explicitly select API Token scheme
    config_values:
      subdomain: YOUR_SUBDOMAIN
    secrets:
      email: ZENDESK_EMAIL
      api_token: ZENDESK_API_TOKEN
