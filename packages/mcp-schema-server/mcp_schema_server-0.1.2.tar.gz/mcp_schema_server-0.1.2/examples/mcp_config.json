{
  "_comment": "Example MCP client configuration for mcp-schema-server",
  "_docs": "https://modelcontextprotocol.io/quickstart/user",
  
  "mcpServers": {
    "mysql-schema": {
      "_comment": "MySQL Schema Server - provides read-only schema introspection",
      "_comment_uvx": "Using uvx - no installation required. Just have uv installed.",
      
      "command": "uvx",
      "args": ["mcp-schema-server"],
      
      "env": {
        "_comment": "Database connection settings",
        "DB_HOST": "localhost",
        "DB_PORT": "3306",
        "DB_NAME": "your_database_name",
        "DB_USER": "your_username",
        "DB_PASSWORD": "your_password",
        
        "_comment_server": "Optional server configuration",
        "MCP_SERVER_NAME": "mysql-schema-server",
        "MCP_LOG_LEVEL": "INFO"
      }
    },
    
    "mysql-schema-python": {
      "_comment": "Alternative: Using python module (requires package installation)",
      
      "command": "python",
      "args": ["-m", "mcp_schema_server.server"],
      
      "env": {
        "DB_HOST": "localhost",
        "DB_PORT": "3306",
        "DB_NAME": "your_database_name",
        "DB_USER": "your_username",
        "DB_PASSWORD": "your_password",
        
        "MCP_SERVER_NAME": "mysql-schema-server",
        "MCP_LOG_LEVEL": "INFO"
      }
    }
  }
}
