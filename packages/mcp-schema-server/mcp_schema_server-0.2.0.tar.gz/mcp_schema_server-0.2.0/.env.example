# MySQL Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=your_database_name
DB_USER=your_username
DB_PASSWORD=your_password

# Optional: Database connection string (overrides individual settings)
# DATABASE_URL=mysql+pymysql://user:password@localhost:3306/database_name

# MCP Server Configuration
MCP_SERVER_NAME=mcp-schema-server
MCP_LOG_LEVEL=INFO

# Optional: Table Ignore Patterns
# Comma-separated list of patterns to exclude from schema queries
# Supports wildcards (* = any characters) and full regex
# Examples:
#   IGNORE_TABLES=temp_*                    - Ignore all tables starting with "temp_"
#   IGNORE_TABLES=db_subscription_*         - Ignore all tables starting with "db_subscription_"
#   IGNORE_TABLES=audit_log,backup_*        - Ignore audit_log and all backup tables
#   IGNORE_TABLES=^test_.*$,^.*_old$        - Full regex patterns (tables starting with "test_" or ending with "_old")
# IGNORE_TABLES=temp_*,db_subscription_*,audit_log
