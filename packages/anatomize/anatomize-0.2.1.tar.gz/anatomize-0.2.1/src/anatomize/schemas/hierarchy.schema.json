{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/BradSegal/anatomize/schemas/hierarchy.schema.json",
  "title": "Anatomize Hierarchy",
  "description": "Schema for anatomize hierarchy files",
  "type": "object",
  "required": ["metadata", "packages"],
  "properties": {
    "$schema": { "type": "string" },
    "metadata": {
      "type": "object",
      "required": ["generator_version", "sources", "resolution", "total_packages", "total_modules", "total_classes", "total_functions", "token_estimate"],
      "properties": {
        "generator_version": { "type": "string" },
        "sources": { "type": "array", "items": { "type": "string" }, "minItems": 1 },
        "resolution": { "type": "string", "enum": ["hierarchy", "modules", "signatures"] },
        "total_packages": { "type": "integer", "minimum": 0 },
        "total_modules": { "type": "integer", "minimum": 0 },
        "total_classes": { "type": "integer", "minimum": 0 },
        "total_functions": { "type": "integer", "minimum": 0 },
        "token_estimate": { "type": "integer", "minimum": 0 }
      },
      "additionalProperties": false
    },
    "packages": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "required": ["subpackages", "modules"],
        "properties": {
          "subpackages": { "type": "array", "items": { "type": "string" } },
          "modules": { "type": "array", "items": { "type": "string" } }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
