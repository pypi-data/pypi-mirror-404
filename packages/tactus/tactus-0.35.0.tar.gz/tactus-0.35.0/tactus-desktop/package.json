{
  "name": "tactus-desktop",
  "version": "0.28.0",
  "description": "Tactus IDE - Desktop Application",
  "main": "dist/src/main.js",
  "author": "Anthus <info@anthus.ai>",
  "license": "MIT",
  "scripts": {
    "dev": "tsc && tsc -p preload/tsconfig.json && cross-env ELECTRON_RUN_AS_NODE= electron .",
    "build": "tsc && tsc -p preload/tsconfig.json",
    "build:frontend": "node scripts/build-frontend.mjs",
    "build:backend": "node scripts/build-backend.mjs",
    "build:all": "npm run build:frontend && npm run build:backend && npm run build",
    "package:mac": "npm run build:all && electron-builder --mac",
    "package:win": "npm run build:all && electron-builder --win",
    "package:linux": "npm run build:all && electron-builder --linux",
    "package:all": "npm run build:all && electron-builder --mac --win --linux"
  },
  "dependencies": {
    "electron-log": "^5.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "cross-env": "^10.1.0",
    "electron": "^27.3.11",
    "electron-builder": "^24.9.1",
    "typescript": "^5.3.3"
  },
  "build": {
    "appId": "ai.anthus.tac-ide",
    "productName": "Tactus IDE",
    "directories": {
      "buildResources": "resources",
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "frontend/dist/**/*"
    ],
    "extraResources": [
      {
        "from": "backend/dist",
        "to": "backend",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "../examples",
        "to": "examples",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "resources/app-icon.icns",
      "target": [
        "dmg",
        "zip"
      ],
      "artifactName": "${productName}-${version}-${os}.${ext}",
      "identity": null,
      "hardenedRuntime": false,
      "gatekeeperAssess": false
    },
    "win": {
      "icon": "resources/app-icon.ico",
      "target": [
        "nsis"
      ],
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "linux": {
      "icon": "resources/app-icon.png",
      "target": [
        "AppImage"
      ],
      "category": "Development",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
