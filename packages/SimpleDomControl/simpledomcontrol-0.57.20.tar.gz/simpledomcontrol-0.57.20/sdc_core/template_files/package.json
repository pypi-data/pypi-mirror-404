{
  "name": "<!--§PROJECT§-->",
  "version": "1.0.0",
  "description": "",
  "private": true,
  "type": "module",
  "module": "esnext",
  "imports": {
    "#root/*.js": "./Assets/*.js",
    "#lib/*": "./Assets/libs/*"
  },
  "scripts": {
    "build": "gulp --gulpfile=Assets/gulpfile.jsx --mode=production",
    "develop": "gulp --gulpfile=Assets/gulpfile.jsx develop --mode=development",
    "sdc_test": "NODE_OPTIONS=--experimental-vm-modules jest"
  },
  "jest": {
    "transform": {
      "\\.[jt]sx?$": [
        "babel-jest",
        {
          "configFile": "./Assets/babel.config.json"
        }
      ]
    },
    "testEnvironment": "jest-environment-jsdom",
    "testEnvironmentOptions": {
      "url": "http://127.0.0.1:8765"
    },
    "globalSetup": "<rootDir>/Assets/tests/config/pre-test-setup.js",
    "globalTeardown": "<rootDir>/Assets/tests/config/post-test-teardown.js",
    "setupFilesAfterEnv": [
      "<rootDir>/Assets/tests/config/test-setup.js"
    ],
    "testMatch": [
      "<rootDir>/*/Assets/tests/*.test.js?(x)"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "",
  "devDependencies": {
    "@babel/core":  "^7.26.10",
    "@babel/preset-env": "^7.26.9",
    "@babel/preset-react": "^7.26.3",
    "@babel/register": "^7.25.9",
    "babel-jest": "^29.7.0",
    "babel-loader": "^10.0.0",
    "css-loader": "^7.1.2",
    "dotenv": "^16.4.7",
    "glob-parent": "^6.0.2",
    "glob-watcher": "^6.0.0",
    "gulp": "^5.0.0",
    "gulp-clean": "^0.4.0",
    "gulp-copy": "^5.0.0",
    "gulp-exec": "^5.0.0",
    "gulp-rename": "^2.0.0",
    "gulp-sass": "^6.0.1",
    "gulp-uglify": "^3.0.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "js-cookie": "^3.0.5",
    "micromatch": "^4.0.8",
    "sass": "^1.85.1",
    "sass-loader": "^16.0.5",
    "style-loader": "^4.0.0",
    "terser-webpack-plugin": "^5.3.14",
    "webpack": "^5.98.0",
    "webpack-stream": "^7.0.0"
  },
  "overrides": {
    "glob-parent": "$glob-parent",
    "glob-watcher": "$glob-watcher"
  },
  "dependencies": {
    "@popperjs/core": "^2.11.8",
    "bootstrap": "^5.3.3",
    "esm": "^3.2.25",
    "jquery": "^3.7.0",
    "lodash": "^4.17.21",
    "sdc_client": "^0.57.20"
  }
}
