{
    "version": "0.2.0",
    "configurations": [
        {

            "name": "Python Test Debugger",
            "type": "debugpy",
            "request": "launch",
            "console": "integratedTerminal",
            "justMyCode": false,
            "purpose": ["debug-test"],
            "module": "pytest",
            "args": [
                "-s",
                "--verbose"
            ],
        },

        {

            "name": "Command Debugger",
            "type": "debugpy",
            "request": "launch",
            "console": "integratedTerminal",
            "justMyCode": true,
            "purpose": ["debug-test"],
            "module": "crisp_t.cli",
            "args": [
                "--inp",
                "downloads/covid_corpus_2000",
                "--regression",
                "--include",
                "user_favourites,user_friends",
                "--outcome",
                "user_followers"
            ],
        },
        {
            "type": "debugpy",
            "name": "Python: Debug Elixir",
            "request": "launch",
            "program": "server.py",
            "justMyCode": true,
            "env": {
                "TEST": "TEST"
            },
            "console": "integratedTerminal",
            "consoleName": "Python Debug Console"
        }
    ],
}