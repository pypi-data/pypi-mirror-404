# Exclude all markdown files except main README.md, CHANGELOG.md and CONTRIBUTING.md
recursive-exclude * *.md
include README.md
include CHANGELOG.md
include CONTRIBUTING.md
include LICENSE
include MANIFEST.in
include requirements*.txt
recursive-include src/django_cfg *.py
recursive-include src/django_cfg *.json
recursive-include src/django_cfg *.yaml
recursive-include src/django_cfg *.yml

# Include only ZIP archives from static/frontend (exclude extracted directories)
include src/django_cfg/static/frontend/*.zip
recursive-exclude src/django_cfg/static/frontend/admin *
recursive-exclude src/django_cfg/static/frontend/nextjs_admin *

# Exclude cache files
recursive-exclude * __pycache__
recursive-exclude * *.py[co]

# Include template archive
recursive-include src/django_cfg/template_archive *

# Exclude development files and directories
recursive-exclude @* *
recursive-exclude @archive *
recursive-exclude devops *
recursive-exclude opensource *
recursive-exclude examples *
recursive-exclude tests *
recursive-exclude htmlcov *
recursive-exclude src/@docs *
recursive-exclude src/internal-docs *
exclude package.json
exclude .env*

# Exclude development and test files
exclude pytest.ini
exclude tox.ini
exclude .coveragerc
exclude .editorconfig
exclude .pre-commit-config.yaml
exclude poetry.lock

# Exclude version control
recursive-exclude .git *
recursive-exclude .github *
exclude .gitignore
recursive-exclude * .gitignore

# Exclude Node.js files
exclude package*.json
exclude yarn*.lock
recursive-exclude node_modules *